{
  String templateBodyParameterName=ParamUtil.getString(actionRequest,"templateBodyParameterName");
  String templateSubjectParameterName=ParamUtil.getString(actionRequest,"templateSubjectParameterName");
  String templateBody=getParameter(actionRequest,templateBodyParameterName);
  String templateSubject=getParameter(actionRequest,templateSubjectParameterName);
  if (Validator.isNull(templateBody)) {
    SessionErrors.add(actionRequest,"templateSubject");
  }
 else   if (Validator.isNull(templateSubject)) {
    SessionErrors.add(actionRequest,"templateBody");
  }
}
