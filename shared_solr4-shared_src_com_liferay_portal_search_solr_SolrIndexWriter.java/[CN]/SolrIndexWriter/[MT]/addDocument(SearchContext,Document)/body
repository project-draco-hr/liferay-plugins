{
  try {
    SolrInputDocument solrInputDocument=_solrDocumentFactory.getSolrInputDocument(document);
    _solrServer.add(solrInputDocument);
    if (_commit || searchContext.isCommitImmediately()) {
      _solrServer.commit();
    }
  }
 catch (  Exception e) {
    _log.error(e,e);
    throw new SearchException(e.getMessage());
  }
}
