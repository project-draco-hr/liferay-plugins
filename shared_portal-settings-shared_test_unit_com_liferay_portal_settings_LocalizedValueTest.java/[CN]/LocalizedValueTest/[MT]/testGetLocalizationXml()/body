{
  LocalizedValue localizedValue=new LocalizedValue(_KEY,_DEFAULT_LOCALE,_AVAILABLE_LOCALES);
  for (  Locale locale : _AVAILABLE_LOCALES) {
    localizedValue.put(locale,"value " + locale.toString());
  }
  String xml=localizedValue.getLocalizationXml();
  Assert.assertEquals("<?xml version='1.0' encoding='UTF-8'?>" + "<root available-locales=\"es_ES,en_US,en_GB\" " + "default-locale=\"es_ES\">"+ "<key language-id=\"es_ES\">value es_ES</key>"+ "<key language-id=\"en_US\">value en_US</key>"+ "<key language-id=\"en_GB\">value en_GB</key>"+ "</root>",xml);
}
