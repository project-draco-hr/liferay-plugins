{
  if (obj instanceof Account) {
    Account account=(Account)obj;
    BooleanQuery booleanQuery=BooleanQueryFactoryUtil.create();
    booleanQuery.addRequiredTerm(Field.PORTLET_ID,PORTLET_ID);
    booleanQuery.addRequiredTerm("accountId",account.getAccountId());
    Hits hits=SearchEngineUtil.search(account.getCompanyId(),booleanQuery,QueryUtil.ALL_POS,QueryUtil.ALL_POS);
    for (int i=0; i < hits.getLength(); i++) {
      Document document=hits.doc(i);
      SearchEngineUtil.deleteDocument(account.getCompanyId(),document.get(Field.UID));
    }
  }
 else   if (obj instanceof Folder) {
    Folder folder=(Folder)obj;
    BooleanQuery booleanQuery=BooleanQueryFactoryUtil.create();
    booleanQuery.addRequiredTerm(Field.PORTLET_ID,PORTLET_ID);
    booleanQuery.addRequiredTerm("folderId",folder.getFolderId());
    Hits hits=SearchEngineUtil.search(folder.getCompanyId(),booleanQuery,QueryUtil.ALL_POS,QueryUtil.ALL_POS);
    for (int i=0; i < hits.getLength(); i++) {
      Document document=hits.doc(i);
      SearchEngineUtil.deleteDocument(folder.getCompanyId(),document.get(Field.UID));
    }
  }
 else   if (obj instanceof Message) {
    Message message=(Message)obj;
    Document document=new DocumentImpl();
    document.addUID(PORTLET_ID,message.getMessageId());
    SearchEngineUtil.deleteDocument(message.getCompanyId(),document.get(Field.UID));
  }
}
