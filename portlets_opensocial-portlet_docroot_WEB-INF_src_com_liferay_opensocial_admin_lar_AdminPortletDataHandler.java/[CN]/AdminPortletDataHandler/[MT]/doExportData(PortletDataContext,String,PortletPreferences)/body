{
  Element rootElement=addExportRootElement();
  Element gadgetsElement=rootElement.addElement("gadgets");
  List<Gadget> gadgets=GadgetLocalServiceUtil.getGadgets(portletDataContext.getCompanyId(),QueryUtil.ALL_POS,QueryUtil.ALL_POS);
  for (  Gadget gadget : gadgets) {
    exportGadget(portletDataContext,gadgetsElement,gadget);
  }
  return rootElement.formattedString();
}
