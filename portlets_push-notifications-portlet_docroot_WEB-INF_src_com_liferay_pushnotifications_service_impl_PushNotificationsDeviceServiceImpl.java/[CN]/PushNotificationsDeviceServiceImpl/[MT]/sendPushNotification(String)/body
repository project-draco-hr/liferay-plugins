{
  PushNotificationsPermission.check(getPermissionChecker(),ActionKeys.SEND_NOTIFICATION);
  JSONObject jsonObject=createJSONObject(payload);
  if (_log.isDebugEnabled()) {
    _log.debug("Sending message " + jsonObject + " to all users");
  }
  pushNotificationsDeviceLocalService.sendPushNotification(jsonObject,QueryUtil.ALL_POS,QueryUtil.ALL_POS);
}
