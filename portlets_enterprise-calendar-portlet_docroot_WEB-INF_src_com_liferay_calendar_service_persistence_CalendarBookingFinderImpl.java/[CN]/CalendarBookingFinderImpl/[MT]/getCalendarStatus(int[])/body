{
  if ((status == null) || (status.length == 0)) {
    return StringPool.BLANK;
  }
  StringBundler sb=new StringBundler(status.length * 2 + 1);
  sb.append(" (");
  for (int i=0; i < status.length; i++) {
    sb.append("status = ? ");
    if ((i + 1) != status.length) {
      sb.append("OR ");
    }
  }
  sb.append(") AND");
  return sb.toString();
}
