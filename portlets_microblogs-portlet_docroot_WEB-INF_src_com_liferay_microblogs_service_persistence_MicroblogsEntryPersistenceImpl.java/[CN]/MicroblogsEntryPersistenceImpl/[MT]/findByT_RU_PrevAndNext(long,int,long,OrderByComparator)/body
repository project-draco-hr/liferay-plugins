{
  MicroblogsEntry microblogsEntry=findByPrimaryKey(microblogsEntryId);
  Session session=null;
  try {
    session=openSession();
    MicroblogsEntry[] array=new MicroblogsEntryImpl[3];
    array[0]=getByT_RU_PrevAndNext(session,microblogsEntry,type,receiverUserId,orderByComparator,true);
    array[1]=microblogsEntry;
    array[2]=getByT_RU_PrevAndNext(session,microblogsEntry,type,receiverUserId,orderByComparator,false);
    return array;
  }
 catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
  }
}
