{
  StopWatch stopWatch=new StopWatch();
  stopWatch.start();
  try {
    SolrQuery solrQuery=new SolrQuery();
    QueryResponse queryResponse=search(solrQuery,searchContext,query);
    Hits hits=processQueryResponse(solrQuery,queryResponse,searchContext,query);
    hits.setStart(stopWatch.getStartTime());
    return hits;
  }
 catch (  Exception e) {
    if (_log.isWarnEnabled()) {
      _log.warn(e,e);
    }
    if (!_swallowException) {
      throw new SearchException(e.getMessage());
    }
    return new HitsImpl();
  }
 finally {
    if (_log.isInfoEnabled()) {
      stopWatch.stop();
      _log.info("Searching " + query.toString() + " took "+ stopWatch.getTime()+ " ms");
    }
  }
}
