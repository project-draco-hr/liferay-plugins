{
  KaleoTaskAssignment kaleoTaskAssignment=findByPrimaryKey(kaleoTaskAssignmentId);
  Session session=null;
  try {
    session=openSession();
    KaleoTaskAssignment[] array=new KaleoTaskAssignmentImpl[3];
    array[0]=getByKTI_ACN_PrevAndNext(session,kaleoTaskAssignment,kaleoTaskId,assigneeClassName,orderByComparator,true);
    array[1]=kaleoTaskAssignment;
    array[2]=getByKTI_ACN_PrevAndNext(session,kaleoTaskAssignment,kaleoTaskId,assigneeClassName,orderByComparator,false);
    return array;
  }
 catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
  }
}
