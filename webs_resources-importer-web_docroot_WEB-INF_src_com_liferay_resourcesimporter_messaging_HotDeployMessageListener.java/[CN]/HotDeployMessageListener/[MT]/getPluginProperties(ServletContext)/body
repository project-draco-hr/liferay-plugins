{
  Properties properties=null;
  try {
    String propertiesString=StringUtil.read(servletContext.getResourceAsStream("/WEB-INF/liferay-plugin-package.properties"));
    if (propertiesString != null) {
      String contextPath=servletContext.getRealPath(StringPool.SLASH);
      contextPath=StringUtil.replace(contextPath,StringPool.BACK_SLASH,StringPool.SLASH);
      propertiesString=propertiesString.replace("${context.path}",contextPath);
      properties=PropertiesUtil.load(propertiesString);
    }
  }
 catch (  IOException e) {
    _log.error(e,e);
  }
  if (properties == null) {
    properties=new Properties();
  }
  return properties;
}
