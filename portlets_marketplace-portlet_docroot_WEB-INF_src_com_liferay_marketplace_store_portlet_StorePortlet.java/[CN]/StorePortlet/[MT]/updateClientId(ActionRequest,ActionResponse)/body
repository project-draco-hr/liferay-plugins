{
  ThemeDisplay themeDisplay=(ThemeDisplay)actionRequest.getAttribute(WebKeys.THEME_DISPLAY);
  if (!themeDisplay.isSignedIn()) {
    return;
  }
  String clientId=ParamUtil.getString(actionRequest,"clientId");
  String mpToken=ParamUtil.getString(actionRequest,"mpToken");
  String decodedClientId=MarketplaceUtil.decodeClientId(clientId,mpToken);
  if (Validator.isNull(decodedClientId)) {
    return;
  }
  ExpandoValueLocalServiceUtil.addValue(themeDisplay.getCompanyId(),User.class.getName(),"MP","client-id",themeDisplay.getUserId(),decodedClientId);
}
