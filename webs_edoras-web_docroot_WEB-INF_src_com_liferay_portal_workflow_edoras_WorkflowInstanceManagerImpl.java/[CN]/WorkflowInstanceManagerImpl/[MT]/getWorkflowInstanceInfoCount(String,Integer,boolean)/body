{
  try {
    if (workflowDefinitionVersion == null) {
      return WorkflowInstanceUtil.countByN_F(workflowDefinitionName,completed);
    }
 else {
      return WorkflowInstanceUtil.countByN_V_F(workflowDefinitionName,workflowDefinitionVersion,completed);
    }
  }
 catch (  Exception e) {
    throw new WorkflowException(e.getMessage(),e);
  }
}
