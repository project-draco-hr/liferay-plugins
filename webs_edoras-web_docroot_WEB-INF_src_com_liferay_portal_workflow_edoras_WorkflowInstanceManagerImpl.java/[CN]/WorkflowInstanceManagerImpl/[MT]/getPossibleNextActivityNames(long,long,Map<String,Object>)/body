{
  ProcessSetup processSetup=getSetup();
  ProcessDao processDao=processSetup.getProcessDao();
  ProcessInstance processInstance=processDao.loadProcessInstance(workflowInstanceId,false);
  List<String> activityNames=new ArrayList<String>();
  ProcessEngine processEngine=processSetup.getEngine();
  List<Activity> activities=processEngine.getNextActivities(processInstance,true);
  for (  Activity activity : activities) {
    activityNames.add(activity.getName());
  }
  return activityNames;
}
