{
  if ((hex.length() % 2) != 0) {
    return new byte[0];
  }
  byte[] bytes=new byte[hex.length() / 2];
  for (int i=0; i < hex.length(); i=i + 2) {
    String s=hex.substring(i,i + 2);
    try {
      bytes[i / 2]=(byte)Integer.parseInt(s,16);
    }
 catch (    NumberFormatException nfe) {
      return new byte[0];
    }
  }
  return bytes;
}
