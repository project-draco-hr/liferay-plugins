{
  Session session=null;
  try {
    session=openSession();
    BatchSessionUtil.update(session,taskView,merge);
    taskView.setNew(false);
    return taskView;
  }
 catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
    FinderCacheUtil.clearCache(TaskView.class.getName());
  }
}
