{
  String content=subject + "\n\n" + body;
  User user=UserLocalServiceUtil.getUser(userId);
  if (AkismetUtil.isSpam(user.getCompanyId(),akismetData.getUserIP(),akismetData.getUserAgent(),akismetData.getReferrer(),akismetData.getPermalink(),akismetData.getType(),user.getFullName(),user.getEmailAddress(),content)) {
    return true;
  }
 else {
    return false;
  }
}
