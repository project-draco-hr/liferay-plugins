{
  Group group=themeDisplay.getScopeGroup();
  String descriptiveName=HtmlUtil.escape(group.getDescriptiveName());
  String name=descriptiveName;
  String description=descriptiveName;
  String layoutFullURL=PortalUtil.getLayoutFullURL(themeDisplay);
  String feedURL=layoutFullURL;
  String entryURL=layoutFullURL;
  LayoutTypePortlet layoutTypePortlet=themeDisplay.getLayoutTypePortlet();
  if (!layoutTypePortlet.hasDefaultScopePortletId(group.getGroupId(),PortletKeys.KNOWLEDGE_BASE_ADMIN)) {
    feedURL=null;
    entryURL=null;
  }
  return exportToRSS(name,description,type,version,displayStyle,feedURL,entryURL,filterGroupArticles(group,max),themeDisplay);
}
