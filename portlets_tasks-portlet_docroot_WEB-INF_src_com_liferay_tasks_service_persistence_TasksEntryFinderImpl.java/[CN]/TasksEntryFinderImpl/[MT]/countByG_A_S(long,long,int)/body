{
  if (status != TasksEntryConstants.STATUS_ALL) {
    if (groupId > 0) {
      return TasksEntryUtil.countByG_A_S(groupId,assigneeUserId,getStatusArray(status));
    }
    return TasksEntryUtil.countByA_S(assigneeUserId,getStatusArray(status));
  }
  if (groupId > 0) {
    return TasksEntryUtil.countByG_A(groupId,assigneeUserId);
  }
  return TasksEntryUtil.countByAssigneeUserId(assigneeUserId);
}
