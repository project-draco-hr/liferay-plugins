{
  Connection con=null;
  PreparedStatement ps=null;
  ResultSet rs=null;
  try {
    con=DataAccess.getUpgradeOptimizedConnection();
    ps=con.prepareStatement("select userNotificationEventId, userId, payload from " + "UserNotificationEvent where type_ = ?");
    ps.setString(1,"1_WAR_microblogsportlet");
    rs=ps.executeQuery();
    while (rs.next()) {
      long userNotificationEventId=rs.getLong("userNotificationEventId");
      String payload=rs.getString("payload");
      JSONObject payloadJSONObject=JSONFactoryUtil.createJSONObject(payload);
      long microblogsEntryId=payloadJSONObject.getLong("classPK");
      MicroblogsEntry microblogsEntry=MicroblogsEntryLocalServiceUtil.fetchMicroblogsEntry(microblogsEntryId);
      if (microblogsEntry == null) {
        return;
      }
      int notificationType=payloadJSONObject.getInt("notificationType");
      if (notificationType != 0) {
        return;
      }
      long userId=rs.getLong("userId");
      notificationType=getNotificationType(microblogsEntry,userId);
      payloadJSONObject.put("notificationType",notificationType);
      updateNotification(userNotificationEventId,payloadJSONObject);
    }
  }
  finally {
    DataAccess.cleanUp(con,ps,rs);
  }
}
