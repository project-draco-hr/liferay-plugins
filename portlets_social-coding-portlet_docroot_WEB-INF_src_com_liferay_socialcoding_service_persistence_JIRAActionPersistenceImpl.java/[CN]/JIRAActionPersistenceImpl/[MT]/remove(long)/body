{
  Session session=null;
  try {
    session=openSession();
    JIRAAction jiraAction=(JIRAAction)session.get(JIRAActionImpl.class,new Long(jiraActionId));
    if (jiraAction == null) {
      if (_log.isWarnEnabled()) {
        _log.warn(_NO_SUCH_ENTITY_WITH_PRIMARY_KEY + jiraActionId);
      }
      throw new NoSuchJIRAActionException(_NO_SUCH_ENTITY_WITH_PRIMARY_KEY + jiraActionId);
    }
    return remove(jiraAction);
  }
 catch (  NoSuchJIRAActionException nsee) {
    throw nsee;
  }
catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
  }
}
