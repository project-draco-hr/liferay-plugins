{
  Session session=null;
  try {
    session=openSession();
    KBComment kbComment=(KBComment)session.get(KBCommentImpl.class,Long.valueOf(kbCommentId));
    if (kbComment == null) {
      if (_log.isWarnEnabled()) {
        _log.warn(_NO_SUCH_ENTITY_WITH_PRIMARY_KEY + kbCommentId);
      }
      throw new NoSuchCommentException(_NO_SUCH_ENTITY_WITH_PRIMARY_KEY + kbCommentId);
    }
    return kbCommentPersistence.remove(kbComment);
  }
 catch (  NoSuchCommentException nsee) {
    throw nsee;
  }
catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
  }
}
