{
  String cmd=ParamUtil.getString(req,Constants.CMD);
  if (!cmd.equals(Constants.UPDATE)) {
    return;
  }
  String producerId=ParamUtil.getString(req,"producerId");
  String portletHandle=ParamUtil.getString(req,"portletHandle");
  String portletResource=ParamUtil.getString(req,"portletResource");
  PortletPreferences prefs=PortletPreferencesFactoryUtil.getPortletSetup(req,portletResource);
  prefs.setValue("producerId",producerId);
  prefs.setValue("portletHandle",portletHandle);
  prefs.store();
  PortletSession ses=req.getPortletSession();
  ses.removeAttribute("markupService");
  SessionMessages.add(req,config.getPortletName() + ".doConfigure");
}
