{
  Session session=null;
  try {
    session=openSession();
    Folder folder=(Folder)session.get(FolderImpl.class,new Long(folderId));
    if (folder == null) {
      if (_log.isWarnEnabled()) {
        _log.warn(_NO_SUCH_ENTITY_WITH_PRIMARY_KEY + folderId);
      }
      throw new NoSuchFolderException(_NO_SUCH_ENTITY_WITH_PRIMARY_KEY + folderId);
    }
    return remove(folder);
  }
 catch (  NoSuchFolderException nsee) {
    throw nsee;
  }
catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
  }
}
