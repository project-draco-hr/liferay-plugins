{
  long classNameId=PortalUtil.getClassNameId(classObj);
  List<Comment> comments=CommentUtil.findByG_C(portletDataContext.getScopeGroupId(),classNameId);
  for (  Comment comment : comments) {
    if (!portletDataContext.isWithinDateRange(comment.getModifiedDate())) {
      continue;
    }
    String path=getPortletPath(portletDataContext) + "/comments/" + comment.getCommentId()+ ".xml";
    if (!portletDataContext.isPathNotProcessed(path)) {
      continue;
    }
    exportComment(portletDataContext,rootElement,name,path,comment);
  }
}
