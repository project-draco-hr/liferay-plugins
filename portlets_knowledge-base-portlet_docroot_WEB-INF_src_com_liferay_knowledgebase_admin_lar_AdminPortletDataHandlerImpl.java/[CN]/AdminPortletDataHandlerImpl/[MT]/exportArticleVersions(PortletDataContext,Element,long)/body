{
  Element versionsElement=articleElement.addElement("versions");
  String rootPath=getPortletPath(portletDataContext) + "/articles/versions/" + resourcePrimKey;
  List<Article> articles=ArticleUtil.findByResourcePrimKey(resourcePrimKey,QueryUtil.ALL_POS,QueryUtil.ALL_POS,new ArticleModifiedDateComparator(true));
  for (  Article article : articles) {
    String path=rootPath + StringPool.SLASH + article.getArticleId()+ ".xml";
    Element curArticleElement=versionsElement.addElement("article");
    curArticleElement.addAttribute("path",path);
    portletDataContext.addZipEntry(path,article);
  }
}
