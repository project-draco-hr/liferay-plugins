{
  Connection con=null;
  PreparedStatement ps=null;
  ResultSet rs=null;
  try {
    con=DataAccess.getConnection();
    ps=con.prepareStatement("select count(*) from ResourcePermission where name = ?");
    ps.setString(1,name);
    rs=ps.executeQuery();
    while (rs.next()) {
      long count=rs.getLong(1);
      if (count > 0) {
        return true;
      }
    }
    return false;
  }
  finally {
    DataAccess.cleanUp(con,ps,rs);
  }
}
