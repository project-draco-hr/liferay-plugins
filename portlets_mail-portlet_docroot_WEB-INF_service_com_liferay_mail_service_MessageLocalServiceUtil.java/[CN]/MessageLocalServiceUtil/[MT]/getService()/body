{
  if (_service == null) {
    Object obj=PortletBeanLocatorUtil.locate(ClpSerializer.SERVLET_CONTEXT_NAME,MessageLocalService.class.getName());
    ClassLoader portletClassLoader=(ClassLoader)PortletBeanLocatorUtil.locate(ClpSerializer.SERVLET_CONTEXT_NAME,"portletClassLoader");
    ClassLoaderProxy classLoaderProxy=new ClassLoaderProxy(obj,MessageLocalService.class.getName(),portletClassLoader);
    _service=new MessageLocalServiceClp(classLoaderProxy);
    ClpSerializer.setClassLoader(portletClassLoader);
  }
  return _service;
}
