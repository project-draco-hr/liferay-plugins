{
  ThemeDisplay themeDisplay=(ThemeDisplay)request.getAttribute(WebKeys.THEME_DISPLAY);
  String selPortletId=PortletKeys.KNOWLEDGE_BASE_DISPLAY + PortletConstants.INSTANCE_SEPARATOR + "0000";
  String articleURL=getArticleURL(resourcePrimKey,selPlid,selPortletId,themeDisplay);
  articleURL=HttpUtil.setParameter(articleURL,"p_p_state",WindowState.MAXIMIZED.toString());
  String portletAddDefaultResourceCheckEnabled=PropsUtil.get(PropsKeys.PORTLET_ADD_DEFAULT_RESOURCE_CHECK_ENABLED);
  if (!GetterUtil.getBoolean(portletAddDefaultResourceCheckEnabled)) {
    return articleURL;
  }
  articleURL=HttpUtil.setParameter(articleURL,"p_p_auth",AuthTokenUtil.getToken(request,selPlid,selPortletId));
  return articleURL;
}
