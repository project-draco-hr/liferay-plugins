{
  IMAPFolder imapFolder=null;
  try {
    imapFolder=openFolder(storedFolderId);
    int[] messageIndexes=getMessageIndexes(imapFolder.getMessageCount(),pageNumber,messagesPerPage);
    Message[] messages=imapFolder.getMessages(messageIndexes[0],messageIndexes[1]);
    return getMessageUIDs(imapFolder,messages);
  }
 catch (  MessagingException me) {
    throw new MailException(me);
  }
 finally {
    closeFolder(imapFolder,false);
  }
}
