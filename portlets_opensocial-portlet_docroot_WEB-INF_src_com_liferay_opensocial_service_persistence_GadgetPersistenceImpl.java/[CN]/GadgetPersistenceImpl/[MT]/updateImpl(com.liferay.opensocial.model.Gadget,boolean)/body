{
  gadget=toUnwrappedModel(gadget);
  boolean isNew=gadget.isNew();
  GadgetModelImpl gadgetModelImpl=(GadgetModelImpl)gadget;
  if (Validator.isNull(gadget.getUuid())) {
    String uuid=PortalUUIDUtil.generate();
    gadget.setUuid(uuid);
  }
  Session session=null;
  try {
    session=openSession();
    BatchSessionUtil.update(session,gadget,merge);
    gadget.setNew(false);
  }
 catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
  }
  FinderCacheUtil.clearCache(FINDER_CLASS_NAME_LIST_WITH_PAGINATION);
  if (isNew) {
    FinderCacheUtil.clearCache(FINDER_CLASS_NAME_LIST_WITHOUT_PAGINATION);
  }
 else {
    if (!Validator.equals(gadget.getUuid(),gadgetModelImpl.getOriginalUuid())) {
      FinderCacheUtil.removeResult(FINDER_PATH_WITHOUT_PAGINATION_FIND_BY_UUID,new Object[]{gadgetModelImpl.getOriginalUuid()});
    }
    if (gadget.getCompanyId() != gadgetModelImpl.getOriginalCompanyId()) {
      FinderCacheUtil.removeResult(FINDER_PATH_WITHOUT_PAGINATION_FIND_BY_COMPANYID,new Object[]{Long.valueOf(gadgetModelImpl.getOriginalCompanyId())});
    }
  }
  EntityCacheUtil.putResult(GadgetModelImpl.ENTITY_CACHE_ENABLED,GadgetImpl.class,gadget.getPrimaryKey(),gadget);
  if (isNew) {
    FinderCacheUtil.putResult(FINDER_PATH_FETCH_BY_C_U,new Object[]{Long.valueOf(gadget.getCompanyId()),gadget.getUrl()},gadget);
  }
 else {
    if ((gadget.getCompanyId() != gadgetModelImpl.getOriginalCompanyId()) || !Validator.equals(gadget.getUrl(),gadgetModelImpl.getOriginalUrl())) {
      FinderCacheUtil.removeResult(FINDER_PATH_FETCH_BY_C_U,new Object[]{Long.valueOf(gadgetModelImpl.getOriginalCompanyId()),gadgetModelImpl.getOriginalUrl()});
      FinderCacheUtil.putResult(FINDER_PATH_FETCH_BY_C_U,new Object[]{Long.valueOf(gadget.getCompanyId()),gadget.getUrl()},gadget);
    }
  }
  return gadget;
}
