{
  gadget=toUnwrappedModel(gadget);
  Session session=null;
  try {
    session=openSession();
    if (gadget.isCachedModel()) {
      gadget=(Gadget)session.get(GadgetImpl.class,gadget.getPrimaryKeyObj());
    }
    session.delete(gadget);
  }
 catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
  }
  clearCache(gadget);
  return gadget;
}
