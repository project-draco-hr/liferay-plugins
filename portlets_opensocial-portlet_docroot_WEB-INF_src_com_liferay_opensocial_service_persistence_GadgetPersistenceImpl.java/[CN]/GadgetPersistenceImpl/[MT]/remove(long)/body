{
  Session session=null;
  try {
    session=openSession();
    Gadget gadget=(Gadget)session.get(GadgetImpl.class,new Long(gadgetId));
    if (gadget == null) {
      if (_log.isWarnEnabled()) {
        _log.warn(_NO_SUCH_ENTITY_WITH_PRIMARY_KEY + gadgetId);
      }
      throw new NoSuchGadgetException(_NO_SUCH_ENTITY_WITH_PRIMARY_KEY + gadgetId);
    }
    return gadgetPersistence.remove(gadget);
  }
 catch (  NoSuchGadgetException nsee) {
    throw nsee;
  }
catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
  }
}
