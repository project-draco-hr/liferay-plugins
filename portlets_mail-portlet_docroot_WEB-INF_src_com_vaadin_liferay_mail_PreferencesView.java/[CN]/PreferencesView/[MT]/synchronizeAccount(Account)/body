{
  try {
    controller.getMailManager().synchronizeAccount(account.getAccountId());
  }
 catch (  SystemException e) {
    controller.showError(Lang.get("unable-to-synchronize-account"),e);
  }
catch (  PortalException e) {
    controller.showError(Lang.get("unable-to-synchronize-account"),e);
  }
}
