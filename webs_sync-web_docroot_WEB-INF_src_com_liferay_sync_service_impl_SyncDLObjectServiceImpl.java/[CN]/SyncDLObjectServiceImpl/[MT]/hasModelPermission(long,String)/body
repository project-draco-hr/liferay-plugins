{
  PermissionChecker permissionChecker=getPermissionChecker();
  List<Resource> resources=new ArrayList<>(3);
  Resource resource=ResourceLocalServiceUtil.getResource(permissionChecker.getCompanyId(),name,ResourceConstants.SCOPE_COMPANY,String.valueOf(permissionChecker.getCompanyId()));
  resources.add(resource);
  resource=ResourceLocalServiceUtil.getResource(permissionChecker.getCompanyId(),name,ResourceConstants.SCOPE_GROUP,String.valueOf(groupId));
  resources.add(resource);
  resource=ResourceLocalServiceUtil.getResource(permissionChecker.getCompanyId(),name,ResourceConstants.SCOPE_GROUP_TEMPLATE,String.valueOf(GroupConstants.DEFAULT_PARENT_GROUP_ID));
  resources.add(resource);
  long[] roleIds=permissionChecker.getRoleIds(permissionChecker.getUserId(),groupId);
  return ResourcePermissionLocalServiceUtil.hasResourcePermission(resources,roleIds,ActionKeys.VIEW);
}
