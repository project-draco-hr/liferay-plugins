{
  if (changeType == ChangeType.MODIFIED) {
    return;
  }
  FolderData data=FileSystemManagerUtil.getFolderData(_getFullName(rootPath,name));
  if (data == null) {
    _createLocalFolder(rootPath,name);
  }
 else   if (FileSystemEventManagerUtil.isLocalFolderEvent(data.getId(),changeType)) {
    if (_log.isInfoEnabled()) {
      _log.info("Ignoring folder event " + rootPath + StringPool.SPACE+ name);
    }
  }
 else {
    _updateLocalFolder(changeType,data);
  }
}
