{
  long actionIds=0;
  List<ResourceAction> oldResourceActions=resourceActionPersistence.findByName(oldClassName);
  for (  ResourceAction oldResourceAction : oldResourceActions) {
    boolean hasActionId=resourcePermissionLocalService.hasActionId(resourcePermission,oldResourceAction);
    if (!hasActionId) {
      continue;
    }
    actionIds=actionIds | getActionId(oldResourceAction,newClassName);
  }
  return actionIds;
}
