{
  FavoriteSite favoriteSite=findByPrimaryKey(favoriteSiteId);
  Session session=null;
  try {
    session=openSession();
    FavoriteSite[] array=new FavoriteSiteImpl[3];
    array[0]=getByU_G_PrevAndNext(session,favoriteSite,userId,groupId,orderByComparator,true);
    array[1]=favoriteSite;
    array[2]=getByU_G_PrevAndNext(session,favoriteSite,userId,groupId,orderByComparator,false);
    return array;
  }
 catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
  }
}
