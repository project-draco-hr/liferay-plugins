{
  User user=userLocalService.fetchUserByEmailAddress(companyId,emailAddress);
  if (user == null) {
    System.out.println("There is no user with the company ID " + companyId + " and the email address "+ emailAddress+ ".");
    return;
  }
  System.out.println("Email address: " + user.getEmailAddress());
  System.out.println("First name: " + user.getFirstName());
  System.out.println("Last name: " + user.getLastName());
  System.out.println("Login: " + user.getLogin());
  System.out.println("Middle name: " + user.getMiddleName());
  System.out.println("Screen name: " + user.getScreenName());
  System.out.println("User ID: " + user.getUserId());
}
