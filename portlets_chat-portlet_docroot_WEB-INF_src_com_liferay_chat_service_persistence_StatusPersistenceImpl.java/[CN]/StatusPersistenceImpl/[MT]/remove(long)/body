{
  Session session=null;
  try {
    session=openSession();
    Status status=(Status)session.get(StatusImpl.class,new Long(statusId));
    if (status == null) {
      if (_log.isWarnEnabled()) {
        _log.warn(_NO_SUCH_ENTITY_WITH_PRIMARY_KEY + statusId);
      }
      throw new NoSuchStatusException(_NO_SUCH_ENTITY_WITH_PRIMARY_KEY + statusId);
    }
    return statusPersistence.remove(status);
  }
 catch (  NoSuchStatusException nsee) {
    throw nsee;
  }
catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
  }
}
