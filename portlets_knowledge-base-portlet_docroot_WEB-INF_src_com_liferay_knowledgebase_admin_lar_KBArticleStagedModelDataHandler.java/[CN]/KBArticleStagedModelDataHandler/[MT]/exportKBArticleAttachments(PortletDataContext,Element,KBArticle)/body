{
  List<FileEntry> attachmentsFileEntries=article.getAttachmentsFileEntries();
  for (  FileEntry fileEntry : attachmentsFileEntries) {
    String path=ExportImportPathUtil.getModelPath(article,fileEntry.getTitle());
    Element fileElement=portletDataContext.getExportDataElement(fileEntry);
    fileElement.addAttribute("path",path);
    fileElement.addAttribute("file-name",fileEntry.getTitle());
    portletDataContext.addZipEntry(path,fileEntry.getContentStream());
    portletDataContext.addReferenceElement(article,articleElement,fileEntry,PortletDataContext.REFERENCE_TYPE_WEAK,false);
  }
}
