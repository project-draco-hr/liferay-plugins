{
  ServiceContext serviceContext=new ServiceContext();
  serviceContext.setAddGroupPermissions(true);
  serviceContext.setAddGuestPermissions(true);
  Repository repository=PortletFileRepositoryUtil.getPortletRepository(groupId,PortletKeys.KNOWLEDGE_BASE_ARTICLE);
  long repositoryId=repository.getRepositoryId();
  Folder folder=PortletFileRepositoryUtil.getPortletFolder(userId,repositoryId,DLFolderConstants.DEFAULT_PARENT_FOLDER_ID,String.valueOf(resourcePrimKey),serviceContext);
  return folder.getFolderId();
}
