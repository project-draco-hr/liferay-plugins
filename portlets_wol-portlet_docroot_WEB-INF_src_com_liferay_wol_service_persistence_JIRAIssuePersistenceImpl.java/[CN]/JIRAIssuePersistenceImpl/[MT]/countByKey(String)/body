{
  Object[] finderArgs=new Object[]{key};
  Long count=(Long)FinderCacheUtil.getResult(FINDER_PATH_COUNT_BY_KEY,finderArgs,this);
  if (count == null) {
    Session session=null;
    try {
      session=openSession();
      StringBuilder query=new StringBuilder();
      query.append("SELECT COUNT(jiraIssue) ");
      query.append("FROM JIRAIssue jiraIssue WHERE ");
      if (key == null) {
        query.append("jiraIssue.key IS NULL");
      }
 else {
        query.append("jiraIssue.key = ?");
      }
      query.append(" ");
      Query q=session.createQuery(query.toString());
      QueryPos qPos=QueryPos.getInstance(q);
      if (key != null) {
        qPos.add(key);
      }
      count=(Long)q.uniqueResult();
    }
 catch (    Exception e) {
      throw processException(e);
    }
 finally {
      if (count == null) {
        count=Long.valueOf(0);
      }
      FinderCacheUtil.putResult(FINDER_PATH_COUNT_BY_KEY,finderArgs,count);
      closeSession(session);
    }
  }
  return count.intValue();
}
