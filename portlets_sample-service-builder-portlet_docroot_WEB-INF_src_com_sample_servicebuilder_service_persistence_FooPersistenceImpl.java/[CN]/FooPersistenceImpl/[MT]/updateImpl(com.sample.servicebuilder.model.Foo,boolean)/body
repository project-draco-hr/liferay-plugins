{
  Session session=null;
  try {
    session=openSession();
    if (merge) {
      session.merge(foo);
    }
 else {
      if (foo.isNew()) {
        session.save(foo);
      }
    }
    session.flush();
    foo.setNew(false);
    return foo;
  }
 catch (  Exception e) {
    throw HibernateUtil.processException(e);
  }
 finally {
    closeSession(session);
    FinderCache.clearCache(Foo.class.getName());
  }
}
