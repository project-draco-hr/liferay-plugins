{
  Session session=null;
  try {
    session=openSession();
    PostEntry postEntry=(PostEntry)session.get(PostEntryImpl.class,new Long(uid));
    if (postEntry == null) {
      if (_log.isWarnEnabled()) {
        _log.warn("No PostEntry exists with the primary key " + uid);
      }
      throw new NoSuchPostEntryException("No PostEntry exists with the primary key " + uid);
    }
    return remove(postEntry);
  }
 catch (  NoSuchPostEntryException nsee) {
    throw nsee;
  }
catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
  }
}
