{
  Element conditionElement=transitionElement.element("condition");
  if (conditionElement != null) {
    String conditionScript=conditionElement.elementText("script");
    String conditionLanguage=conditionElement.elementText("script-language");
    String conditionDescription=conditionElement.elementText("description");
    Condition condition=new Condition(conditionDescription,conditionLanguage,conditionScript);
    transition.setCondition(condition);
  }
}
