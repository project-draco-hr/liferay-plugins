{
  String deleteQuery=createDeleteQuery(searchContext,SPELL_CHECKER_TYPE);
  try {
    _solrServer.deleteByQuery(deleteQuery);
    if (_commit) {
      _solrServer.commit();
    }
  }
 catch (  Exception e) {
    if (_log.isDebugEnabled()) {
      _log.debug(e,e);
    }
    throw new SearchException(e.getMessage(),e);
  }
}
