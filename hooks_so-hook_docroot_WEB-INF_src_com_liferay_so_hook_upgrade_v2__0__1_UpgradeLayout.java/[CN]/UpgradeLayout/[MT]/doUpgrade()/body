{
  List<Group> groups=GroupLocalServiceUtil.getGroups(QueryUtil.ALL_POS,QueryUtil.ALL_POS);
  for (  Group group : groups) {
    if (!group.isCommunity() || group.getName().equals(GroupConstants.CONTROL_PANEL) || group.getName().equals(GroupConstants.GUEST)) {
      continue;
    }
    long userId=PortalUtil.getValidUserId(group.getCompanyId(),group.getCreatorUserId());
    Layout layout=null;
    try {
      layout=LayoutLocalServiceUtil.getFriendlyURLLayout(group.getGroupId(),group.hasPrivateLayouts(),"/documents");
    }
 catch (    NoSuchLayoutException nsle) {
      continue;
    }
    LayoutLocalServiceUtil.updateFriendlyURL(layout.getPlid(),"/document");
  }
}
