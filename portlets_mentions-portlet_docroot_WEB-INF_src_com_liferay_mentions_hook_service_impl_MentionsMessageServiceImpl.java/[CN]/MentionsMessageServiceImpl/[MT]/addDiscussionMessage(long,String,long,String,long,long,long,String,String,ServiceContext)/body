{
  MBMessage message=super.addDiscussionMessage(userId,userName,groupId,className,classPK,threadId,parentMessageId,subject,body,serviceContext);
  long siteGroupId=PortalUtil.getSiteGroupId(message.getGroupId());
  if (!MentionsUtil.isMentionsEnabled(siteGroupId)) {
    return message;
  }
  notifyUsers(message,serviceContext);
  return message;
}
