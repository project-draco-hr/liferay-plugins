{
  Session session=null;
  try {
    session=openSession();
    HRClient hrClient=(HRClient)session.get(HRClientImpl.class,Long.valueOf(hrClientId));
    if (hrClient == null) {
      if (_log.isWarnEnabled()) {
        _log.warn(_NO_SUCH_ENTITY_WITH_PRIMARY_KEY + hrClientId);
      }
      throw new NoSuchClientException(_NO_SUCH_ENTITY_WITH_PRIMARY_KEY + hrClientId);
    }
    return hrClientPersistence.remove(hrClient);
  }
 catch (  NoSuchClientException nsee) {
    throw nsee;
  }
catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
  }
}
