{
  if ((statuses == null) || (statuses.length == 0)) {
    return StringPool.BLANK;
  }
  StringBundler sb=new StringBundler(statuses.length * 2 + 1);
  sb.append(" (");
  for (int i=0; i < statuses.length; i++) {
    sb.append("status = ? ");
    if ((i + 1) != statuses.length) {
      sb.append("OR ");
    }
  }
  sb.append(") ");
  return sb.toString();
}
