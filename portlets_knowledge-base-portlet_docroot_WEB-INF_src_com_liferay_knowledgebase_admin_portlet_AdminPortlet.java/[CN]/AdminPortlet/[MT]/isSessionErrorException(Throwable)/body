{
  if (cause instanceof ArticleContentException || cause instanceof ArticlePriorityException || cause instanceof ArticleTitleException|| cause instanceof CommentContentException|| cause instanceof DuplicateFileException|| cause instanceof FileSizeException|| cause instanceof NoSuchArticleException|| cause instanceof NoSuchCommentException|| cause instanceof NoSuchFileException|| cause instanceof NoSuchSubscriptionException|| cause instanceof NoSuchTemplateException|| cause instanceof PrincipalException|| cause instanceof TemplateContentException|| cause instanceof TemplateTitleException) {
    return true;
  }
  return false;
}
