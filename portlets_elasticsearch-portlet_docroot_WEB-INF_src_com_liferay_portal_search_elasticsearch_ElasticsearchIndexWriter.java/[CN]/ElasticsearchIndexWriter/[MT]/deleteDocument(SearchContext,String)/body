{
  try {
    Client client=getClient();
    DeleteRequestBuilder deleteRequestBuilder=client.prepareDelete(String.valueOf(searchContext.getCompanyId()),ElasticsearchConnection.LIFERAY_DOCUMENT_TYPE,uid);
    Future<DeleteResponse> deleteFuture=deleteRequestBuilder.execute();
    DeleteResponse deleteResponse=deleteFuture.get();
    logActionResponse(deleteResponse);
  }
 catch (  Exception e) {
    throw new SearchException("Failed to delete document: " + uid,e);
  }
}
