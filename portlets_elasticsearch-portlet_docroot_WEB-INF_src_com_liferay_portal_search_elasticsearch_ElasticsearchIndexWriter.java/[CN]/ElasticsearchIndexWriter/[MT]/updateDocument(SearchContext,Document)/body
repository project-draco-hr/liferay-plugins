{
  try {
    Client client=getClient();
    UpdateRequestBuilder updateRequestBuilder=createUpdateRequestBuilder(searchContext,client,document);
    Future<UpdateResponse> updateFuture=updateRequestBuilder.execute();
    UpdateResponse updateResponse=updateFuture.get();
    logActionResponse(updateResponse);
  }
 catch (  Exception e) {
    throw new SearchException("Failed to update document: " + document,e);
  }
}
