{
  try {
    String fromAddress=notificationTemplateContext.getString("fromAddress");
    String fromName=notificationTemplateContext.getString("fromName");
    String subject=getSubject(notificationTemplateType,notificationTemplateContext);
    String body=getBody(notificationTemplateType,notificationTemplateContext);
    sendNotification(fromAddress,fromName,notificationRecipient,subject,body);
  }
 catch (  Exception e) {
    throw new NotificationSenderException(e);
  }
}
