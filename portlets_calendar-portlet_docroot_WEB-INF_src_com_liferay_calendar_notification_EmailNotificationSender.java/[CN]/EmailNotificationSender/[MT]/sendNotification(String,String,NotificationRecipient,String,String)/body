{
  try {
    InternetAddress from=new InternetAddress(fromAddress,fromName);
    MailMessage mailMessage=new MailMessage(from,subject,notificationMessage,true);
    InternetAddress internetAddress=new InternetAddress(notificationRecipient.getEmail());
    mailMessage.setTo(internetAddress);
    mailMessage.setHTMLFormat(notificationRecipient.isHTMLFormat());
    MailServiceUtil.sendEmail(mailMessage);
  }
 catch (  Exception e) {
    throw new NotificationMessageSenderException("Unable to send mail message",e);
  }
}
