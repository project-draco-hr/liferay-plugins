{
  JIRAIssue jiraIssue=findByPrimaryKey(jiraIssueId);
  int count=countByAssigneeJiraUserId(assigneeJiraUserId);
  Session session=null;
  try {
    session=openSession();
    StringBuilder query=new StringBuilder();
    query.append("SELECT jiraIssue FROM JIRAIssue jiraIssue WHERE ");
    if (assigneeJiraUserId == null) {
      query.append("jiraIssue.assigneeJiraUserId IS NULL");
    }
 else {
      query.append("jiraIssue.assigneeJiraUserId = ?");
    }
    query.append(" ");
    if (obc != null) {
      query.append("ORDER BY ");
      String[] orderByFields=obc.getOrderByFields();
      for (int i=0; i < orderByFields.length; i++) {
        query.append("jiraIssue.");
        query.append(orderByFields[i]);
        if (obc.isAscending()) {
          query.append(" ASC");
        }
 else {
          query.append(" DESC");
        }
        if ((i + 1) < orderByFields.length) {
          query.append(", ");
        }
      }
    }
 else {
      query.append("ORDER BY ");
      query.append("jiraIssue.modifiedDate DESC");
    }
    Query q=session.createQuery(query.toString());
    QueryPos qPos=QueryPos.getInstance(q);
    if (assigneeJiraUserId != null) {
      qPos.add(assigneeJiraUserId);
    }
    Object[] objArray=QueryUtil.getPrevAndNext(q,count,obc,jiraIssue);
    JIRAIssue[] array=new JIRAIssueImpl[3];
    array[0]=(JIRAIssue)objArray[0];
    array[1]=(JIRAIssue)objArray[1];
    array[2]=(JIRAIssue)objArray[2];
    return array;
  }
 catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
  }
}
