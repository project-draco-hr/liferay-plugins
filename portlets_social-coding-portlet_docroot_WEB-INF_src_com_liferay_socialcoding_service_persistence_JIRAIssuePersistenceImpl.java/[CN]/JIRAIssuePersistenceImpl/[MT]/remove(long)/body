{
  Session session=null;
  try {
    session=openSession();
    JIRAIssue jiraIssue=(JIRAIssue)session.get(JIRAIssueImpl.class,new Long(jiraIssueId));
    if (jiraIssue == null) {
      if (_log.isWarnEnabled()) {
        _log.warn(_NO_SUCH_ENTITY_WITH_PRIMARY_KEY + jiraIssueId);
      }
      throw new NoSuchJIRAIssueException(_NO_SUCH_ENTITY_WITH_PRIMARY_KEY + jiraIssueId);
    }
    return remove(jiraIssue);
  }
 catch (  NoSuchJIRAIssueException nsee) {
    throw nsee;
  }
catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
  }
}
