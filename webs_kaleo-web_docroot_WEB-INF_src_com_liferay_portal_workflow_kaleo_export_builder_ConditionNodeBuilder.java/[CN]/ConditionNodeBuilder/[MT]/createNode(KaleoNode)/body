{
  KaleoCondition kaleoCondition=kaleoConditionLocalService.getKaleoNodeKaleoCondition(kaleoNode.getKaleoNodeId());
  Condition condition=new Condition(kaleoNode.getName(),kaleoNode.getDescription(),kaleoCondition.getScript(),kaleoCondition.getScriptLanguage(),kaleoCondition.getScriptRequiredContexts());
  return condition;
}
