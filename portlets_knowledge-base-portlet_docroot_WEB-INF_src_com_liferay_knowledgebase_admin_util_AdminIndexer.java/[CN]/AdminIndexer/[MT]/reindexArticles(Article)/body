{
  List<Article> articles=ArticleLocalServiceUtil.getArticleAndAllDescendants(article.getResourcePrimKey(),WorkflowConstants.STATUS_APPROVED,null);
  Collection<Document> documents=new ArrayList<Document>();
  for (  Article curArticle : articles) {
    documents.add(getDocument(curArticle));
  }
  SearchEngineUtil.updateDocuments(article.getCompanyId(),documents);
}
