{
  User defaultUser=UserLocalServiceUtil.getDefaultUser(company.getCompanyId());
  for (  Map.Entry<String,String> entry : _defaultRoles.entrySet()) {
    String name=entry.getKey();
    try {
      RoleLocalServiceUtil.getRole(company.getCompanyId(),name);
    }
 catch (    NoSuchRoleException nsre) {
      Map<Locale,String> descriptionMap=new HashMap<Locale,String>();
      descriptionMap.put(LocaleUtil.getDefault(),entry.getValue());
      RoleLocalServiceUtil.addRole(defaultUser.getUserId(),company.getCompanyId(),name,null,descriptionMap,RoleConstants.TYPE_REGULAR);
    }
  }
}
