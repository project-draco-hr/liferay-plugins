{
  int online=getInteger(pollerRequest,"online");
  int awake=getInteger(pollerRequest,"awake");
  String activePanelId=getString(pollerRequest,"activePanelId");
  String statusMessage=getString(pollerRequest,"statusMessage");
  int playSound=getInteger(pollerRequest,"playSound");
  if ((online != -1) || (awake != -1) || (activePanelId != null)|| (statusMessage != null)|| (playSound != -1)) {
    pollerResponse.setParameter(PollerResponse.POLLER_HINT_HIGH_CONNECTIVITY,Boolean.TRUE.toString());
  }
  StatusLocalServiceUtil.updateStatus(pollerRequest.getUserId(),online,awake,activePanelId,statusMessage,playSound);
}
