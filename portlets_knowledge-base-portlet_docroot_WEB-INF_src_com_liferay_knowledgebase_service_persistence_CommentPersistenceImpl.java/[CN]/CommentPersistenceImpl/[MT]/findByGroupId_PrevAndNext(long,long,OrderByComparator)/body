{
  Comment comment=findByPrimaryKey(commentId);
  Session session=null;
  try {
    session=openSession();
    Comment[] array=new CommentImpl[3];
    array[0]=getByGroupId_PrevAndNext(session,comment,groupId,orderByComparator,true);
    array[1]=comment;
    array[2]=getByGroupId_PrevAndNext(session,comment,groupId,orderByComparator,false);
    return array;
  }
 catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
  }
}
