{
  Session session=null;
  try {
    session=openSession();
    Comment comment=(Comment)session.get(CommentImpl.class,Long.valueOf(commentId));
    if (comment == null) {
      if (_log.isWarnEnabled()) {
        _log.warn(_NO_SUCH_ENTITY_WITH_PRIMARY_KEY + commentId);
      }
      throw new NoSuchCommentException(_NO_SUCH_ENTITY_WITH_PRIMARY_KEY + commentId);
    }
    return commentPersistence.remove(comment);
  }
 catch (  NoSuchCommentException nsee) {
    throw nsee;
  }
catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
  }
}
