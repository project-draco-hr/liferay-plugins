{
  Comment comment=findByPrimaryKey(commentId);
  Session session=null;
  try {
    session=openSession();
    Comment[] array=new CommentImpl[3];
    array[0]=getByC_C_PrevAndNext(session,comment,classNameId,classPK,orderByComparator,true);
    array[1]=comment;
    array[2]=getByC_C_PrevAndNext(session,comment,classNameId,classPK,orderByComparator,false);
    return array;
  }
 catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
  }
}
