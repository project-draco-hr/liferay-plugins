{
  Comment comment=(Comment)EntityCacheUtil.getResult(CommentModelImpl.ENTITY_CACHE_ENABLED,CommentImpl.class,commentId,this);
  if (comment == null) {
    Session session=null;
    try {
      session=openSession();
      comment=(Comment)session.get(CommentImpl.class,new Long(commentId));
    }
 catch (    Exception e) {
      throw processException(e);
    }
 finally {
      if (comment != null) {
        cacheResult(comment);
      }
      closeSession(session);
    }
  }
  return comment;
}
