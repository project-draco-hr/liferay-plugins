{
  ThemeDisplay themeDisplay=(ThemeDisplay)actionRequest.getAttribute(WebKeys.THEME_DISPLAY);
  long openSocialGadgetId=ParamUtil.getLong(actionRequest,"openSocialGadgetId");
  String name=ParamUtil.getString(actionRequest,"name");
  String url=ParamUtil.getString(actionRequest,"url");
  String xml=ParamUtil.getString(actionRequest,"xml");
  if (openSocialGadgetId <= 0) {
    OpenSocialGadgetLocalServiceUtil.addOpenSocialGadget(themeDisplay.getCompanyId(),name,url,xml);
  }
 else {
    OpenSocialGadgetLocalServiceUtil.updateOpenSocialGadget(openSocialGadgetId,name,xml);
  }
}
