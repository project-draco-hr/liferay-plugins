{
  Session session=null;
  try {
    session=openSession();
    KaleoTask kaleoTask=(KaleoTask)session.get(KaleoTaskImpl.class,new Long(kaleoTaskId));
    if (kaleoTask == null) {
      if (_log.isWarnEnabled()) {
        _log.warn(_NO_SUCH_ENTITY_WITH_PRIMARY_KEY + kaleoTaskId);
      }
      throw new NoSuchTaskException(_NO_SUCH_ENTITY_WITH_PRIMARY_KEY + kaleoTaskId);
    }
    return kaleoTaskPersistence.remove(kaleoTask);
  }
 catch (  NoSuchTaskException nsee) {
    throw nsee;
  }
catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
  }
}
