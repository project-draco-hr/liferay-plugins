{
  hrExpenseCurrencyConversion.setNew(false);
  hrExpenseCurrencyConversion=hrExpenseCurrencyConversionPersistence.update(hrExpenseCurrencyConversion,merge);
  Indexer indexer=IndexerRegistryUtil.getIndexer(getModelClassName());
  if (indexer != null) {
    try {
      indexer.reindex(hrExpenseCurrencyConversion);
    }
 catch (    SearchException se) {
      if (_log.isWarnEnabled()) {
        _log.warn(se,se);
      }
    }
  }
  return hrExpenseCurrencyConversion;
}
