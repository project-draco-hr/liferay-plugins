{
  String title=getPageTitle(activity.getClassName(),activity.getClassPK(),serviceContext);
  AssetRenderer assetRenderer=getAssetRenderer(activity.getClassName(),activity.getClassPK());
  String body=StringUtil.shorten(HtmlUtil.escape(assetRenderer.getSearchSummary(serviceContext.getLocale())),200);
  return new SocialActivityFeedEntry(title,body);
}
