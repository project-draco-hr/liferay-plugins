{
  try {
    WorkflowInstance workflowInstance=WorkflowInstanceUtil.findByPrimaryKey(primaryKey);
    WorkflowInstanceBridge workflowInstanceBridge=new WorkflowInstanceBridge(workflowInstance,null,includeChildren);
    return (T)workflowInstanceBridge;
  }
 catch (  NoSuchWorkflowInstanceException nswie) {
    return null;
  }
catch (  Exception e) {
    throw new ProcessException(e.getMessage(),e);
  }
}
