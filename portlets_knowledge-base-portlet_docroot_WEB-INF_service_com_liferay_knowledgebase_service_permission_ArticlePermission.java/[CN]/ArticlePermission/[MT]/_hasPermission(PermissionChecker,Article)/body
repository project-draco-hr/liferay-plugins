{
  if (!permissionChecker.hasOwnerPermission(article.getCompanyId(),Article.class.getName(),article.getResourcePrimKey(),article.getUserId(),ActionKeys.VIEW) && !permissionChecker.hasPermission(article.getGroupId(),Article.class.getName(),article.getResourcePrimKey(),ActionKeys.VIEW)) {
    return false;
  }
  if (article.getParentResourcePrimKey() != ArticleConstants.DEFAULT_PARENT_RESOURCE_PRIM_KEY) {
    article=ArticleLocalServiceUtil.getLatestArticle(article.getParentResourcePrimKey());
    return _hasPermission(permissionChecker,article);
  }
  return true;
}
