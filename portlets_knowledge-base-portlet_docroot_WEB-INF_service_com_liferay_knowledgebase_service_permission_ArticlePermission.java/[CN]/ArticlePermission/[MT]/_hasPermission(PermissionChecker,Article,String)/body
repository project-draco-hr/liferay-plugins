{
  if (permissionChecker.hasOwnerPermission(article.getCompanyId(),Article.class.getName(),article.getResourcePrimKey(),article.getUserId(),actionId) || permissionChecker.hasPermission(article.getGroupId(),Article.class.getName(),article.getResourcePrimKey(),actionId)) {
    return true;
  }
  if (article.getParentResourcePrimKey() > 0) {
    article=ArticleLocalServiceUtil.getArticleByResourcePrimKey(article.getParentResourcePrimKey());
    return _hasPermission(permissionChecker,article,actionId);
  }
  return false;
}
