{
  User receiverUser=UserLocalServiceUtil.getUserById(activity.getReceiverUserId());
  StringBundler sb=new StringBundler(6);
  sb.append(themeDisplay.getPortalURL());
  sb.append(themeDisplay.getPathFriendlyURLPublic());
