{
  String link=getLink(activity,themeDisplay);
  WallEntry wallEntry=WallEntryLocalServiceUtil.getWallEntry(activity.getClassPK());
  String entryComments=getValue(activity.getExtraData(),"comments",wallEntry.getComments());
  StringBundler sb=new StringBundler(5);
  sb.append("<a href=\"");
  sb.append(link);
  sb.append("\">");
  sb.append(entryComments);
  sb.append("</a>");
  return sb.toString();
}
