{
  calendar1=JCalendarUtil.getJCalendar(calendar1.getTimeInMillis(),timeZone);
  calendar2=JCalendarUtil.getJCalendar(calendar2.getTimeInMillis(),timeZone);
  Calendar sameDayCalendar=JCalendarUtil.getJCalendar(calendar1.get(Calendar.YEAR),calendar1.get(Calendar.MONTH),calendar1.get(Calendar.DAY_OF_MONTH),calendar2.get(Calendar.HOUR_OF_DAY),calendar2.get(Calendar.MINUTE),calendar2.get(Calendar.SECOND),calendar2.get(Calendar.MILLISECOND),timeZone);
  Long shift=calendar1.getTimeInMillis() - sameDayCalendar.getTimeInMillis();
  return shift.intValue();
}
