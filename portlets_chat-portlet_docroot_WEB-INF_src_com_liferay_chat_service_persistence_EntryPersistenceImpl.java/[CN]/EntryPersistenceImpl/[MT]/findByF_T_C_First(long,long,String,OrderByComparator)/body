{
  List<Entry> list=findByF_T_C(fromUserId,toUserId,content,0,1,orderByComparator);
  if (list.isEmpty()) {
    StringBundler msg=new StringBundler(8);
    msg.append(_NO_SUCH_ENTITY_WITH_KEY);
    msg.append("fromUserId=");
    msg.append(fromUserId);
    msg.append(", toUserId=");
    msg.append(toUserId);
    msg.append(", content=");
    msg.append(content);
    msg.append(StringPool.CLOSE_CURLY_BRACE);
    throw new NoSuchEntryException(msg.toString());
  }
 else {
    return list.get(0);
  }
}
