{
  Entry entry=findByPrimaryKey(entryId);
  int count=countByF_T_C(fromUserId,toUserId,content);
  Session session=null;
  try {
    session=openSession();
    StringBuilder query=new StringBuilder();
    query.append("SELECT entry FROM Entry entry WHERE ");
    query.append("entry.fromUserId = ?");
    query.append(" AND ");
    query.append("entry.toUserId = ?");
    query.append(" AND ");
    if (content == null) {
      query.append("entry.content IS NULL");
    }
 else {
      query.append("entry.content = ?");
    }
    query.append(" ");
    if (obc != null) {
      query.append("ORDER BY ");
      String[] orderByFields=obc.getOrderByFields();
      for (int i=0; i < orderByFields.length; i++) {
        query.append("entry.");
        query.append(orderByFields[i]);
        if (obc.isAscending()) {
          query.append(" ASC");
        }
 else {
          query.append(" DESC");
        }
        if ((i + 1) < orderByFields.length) {
          query.append(", ");
        }
      }
    }
 else {
      query.append("ORDER BY ");
      query.append("entry.createDate DESC");
    }
    Query q=session.createQuery(query.toString());
    QueryPos qPos=QueryPos.getInstance(q);
    qPos.add(fromUserId);
    qPos.add(toUserId);
    if (content != null) {
      qPos.add(content);
    }
    Object[] objArray=QueryUtil.getPrevAndNext(q,count,obc,entry);
    Entry[] array=new EntryImpl[3];
    array[0]=(Entry)objArray[0];
    array[1]=(Entry)objArray[1];
    array[2]=(Entry)objArray[2];
    return array;
  }
 catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
  }
}
