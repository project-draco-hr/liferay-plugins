{
  String articleAttachments=getEmailArticleAttachments(locale);
  String articleURL=getEmailArticleURL();
  String articleVersion=LanguageUtil.format(locale,"version-x",String.valueOf(_article.getVersion()));
  String categoryTitle=LanguageUtil.get(locale,"category.kb");
  content=StringUtil.replace(content,new String[]{"[$ARTICLE_ATTACHMENTS$]","[$ARTICLE_URL$]","[$ARTICLE_VERSION$]","[$CATEGORY_TITLE$]"},new String[]{articleAttachments,articleURL,articleVersion,categoryTitle});
  return content;
}
