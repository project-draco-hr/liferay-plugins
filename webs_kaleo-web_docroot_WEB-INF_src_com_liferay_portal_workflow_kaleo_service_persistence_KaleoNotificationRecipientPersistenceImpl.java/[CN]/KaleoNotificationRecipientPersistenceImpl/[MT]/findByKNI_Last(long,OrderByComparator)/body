{
  int count=countByKNI(kaleoNotificationId);
  List<KaleoNotificationRecipient> list=findByKNI(kaleoNotificationId,count - 1,count,orderByComparator);
  if (list.isEmpty()) {
    StringBundler msg=new StringBundler(4);
    msg.append(_NO_SUCH_ENTITY_WITH_KEY);
    msg.append("kaleoNotificationId=");
    msg.append(kaleoNotificationId);
    msg.append(StringPool.CLOSE_CURLY_BRACE);
    throw new NoSuchNotificationRecipientException(msg.toString());
  }
 else {
    return list.get(0);
  }
}
