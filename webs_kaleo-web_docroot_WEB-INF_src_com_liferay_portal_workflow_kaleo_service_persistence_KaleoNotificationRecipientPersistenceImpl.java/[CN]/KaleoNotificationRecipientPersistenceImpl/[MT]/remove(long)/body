{
  Session session=null;
  try {
    session=openSession();
    KaleoNotificationRecipient kaleoNotificationRecipient=(KaleoNotificationRecipient)session.get(KaleoNotificationRecipientImpl.class,new Long(kaleoRecipientId));
    if (kaleoNotificationRecipient == null) {
      if (_log.isWarnEnabled()) {
        _log.warn(_NO_SUCH_ENTITY_WITH_PRIMARY_KEY + kaleoRecipientId);
      }
      throw new NoSuchNotificationRecipientException(_NO_SUCH_ENTITY_WITH_PRIMARY_KEY + kaleoRecipientId);
    }
    return remove(kaleoNotificationRecipient);
  }
 catch (  NoSuchNotificationRecipientException nsee) {
    throw nsee;
  }
catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
  }
}
