{
  KaleoNotificationRecipient kaleoNotificationRecipient=fetchByPrimaryKey(kaleoNotificationRecipientId);
  if (kaleoNotificationRecipient == null) {
    if (_log.isWarnEnabled()) {
      _log.warn(_NO_SUCH_ENTITY_WITH_PRIMARY_KEY + kaleoNotificationRecipientId);
    }
    throw new NoSuchNotificationRecipientException(_NO_SUCH_ENTITY_WITH_PRIMARY_KEY + kaleoNotificationRecipientId);
  }
  return kaleoNotificationRecipient;
}
