{
  SyncDLObject syncDLObject=findByPrimaryKey(objectId);
  Session session=null;
  try {
    session=openSession();
    SyncDLObject[] array=new SyncDLObjectImpl[3];
    array[0]=getByC_M_R_PrevAndNext(session,syncDLObject,companyId,modifiedTime,repositoryId,orderByComparator,true);
    array[1]=syncDLObject;
    array[2]=getByC_M_R_PrevAndNext(session,syncDLObject,companyId,modifiedTime,repositoryId,orderByComparator,false);
    return array;
  }
 catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
  }
}
