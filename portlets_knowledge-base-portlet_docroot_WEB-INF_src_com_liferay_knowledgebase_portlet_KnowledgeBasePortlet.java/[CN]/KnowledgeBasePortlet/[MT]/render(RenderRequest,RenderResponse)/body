{
  ThemeDisplay themeDisplay=(ThemeDisplay)renderRequest.getAttribute(WebKeys.THEME_DISPLAY);
  long resourcePrimKey=ParamUtil.getLong(renderRequest,"resourcePrimKey");
  String title=ParamUtil.getString(renderRequest,"title");
  try {
    KBArticle article=null;
    if (resourcePrimKey > 0) {
      article=KBArticleServiceUtil.getArticle(resourcePrimKey);
    }
 else     if (Validator.isNotNull(title)) {
      article=KBArticleServiceUtil.getArticle(themeDisplay.getPortletGroupId(),title);
    }
    renderRequest.setAttribute(KnowledgeBaseKeys.ARTICLE,article);
  }
 catch (  Exception e) {
    throw new PortletException(e);
  }
  super.render(renderRequest,renderResponse);
}
