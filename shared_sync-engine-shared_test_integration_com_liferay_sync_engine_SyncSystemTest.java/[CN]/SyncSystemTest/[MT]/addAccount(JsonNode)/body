{
  if (stepJsonNode == null) {
    return;
  }
  String name=getString(stepJsonNode,"name");
  SyncSystemTestUtil.addUser(name,_syncAccount.getSyncAccountId());
  String filePathName=FilePathNameUtil.fixFilePathName(System.getProperty("user.home") + "/liferay-sync-test/" + name);
  SyncAccount syncAccount=SyncAccountService.addSyncAccount(filePathName,3,name + "@liferay.com",name,"test",null,false,"http://localhost:8080/api/jsonws");
  syncAccount.setActive(true);
  SyncAccountService.update(syncAccount);
  _syncAccountIds.put(name,syncAccount.getSyncAccountId());
}
