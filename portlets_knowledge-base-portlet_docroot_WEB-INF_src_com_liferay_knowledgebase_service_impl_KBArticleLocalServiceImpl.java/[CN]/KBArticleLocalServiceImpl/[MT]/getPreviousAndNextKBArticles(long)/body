{
  KBArticle kbArticle=kbArticlePersistence.findByPrimaryKey(kbArticleId);
  KBArticle[] previousAndNextKBArticles=kbArticlePersistence.findByG_P_L_PrevAndNext(kbArticleId,kbArticle.getGroupId(),kbArticle.getParentResourcePrimKey(),true,new KBArticlePriorityComparator(true));
  KBArticle previousKBArticle=getPreviousKBArticle(kbArticle,previousAndNextKBArticles);
  KBArticle nextKBArticle=getNextKBArticle(kbArticle,previousAndNextKBArticles);
  return new KBArticle[]{previousKBArticle,kbArticle,nextKBArticle};
}
