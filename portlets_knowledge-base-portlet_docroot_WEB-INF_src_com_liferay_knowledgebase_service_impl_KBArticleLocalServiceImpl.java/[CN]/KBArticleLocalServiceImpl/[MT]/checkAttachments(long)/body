{
  String dirName="knowledgebase/temp/attachments/" + counterLocalService.increment();
  dlStore.addDirectory(companyId,CompanyConstants.SYSTEM,dirName);
  String[] fileNames=dlStore.getFileNames(companyId,CompanyConstants.SYSTEM,"knowledgebase/temp/attachments");
  Arrays.sort(fileNames);
  for (int i=0; i < fileNames.length - 50; i++) {
    dlStore.deleteDirectory(companyId,CompanyConstants.SYSTEM_STRING,CompanyConstants.SYSTEM,fileNames[i]);
  }
  dlStore.deleteDirectory(companyId,CompanyConstants.SYSTEM_STRING,CompanyConstants.SYSTEM,dirName);
}
