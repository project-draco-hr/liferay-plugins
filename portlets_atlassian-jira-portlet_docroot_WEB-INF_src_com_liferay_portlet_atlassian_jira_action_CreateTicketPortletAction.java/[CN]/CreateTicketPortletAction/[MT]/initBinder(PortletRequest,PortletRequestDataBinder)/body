{
  binder.registerCustomEditor(Collection.class,"components",new ComponentsPropertyEditor(Collection.class,true));
  binder.registerCustomEditor(Collection.class,"versions",new VersionsPropertyEditor(Collection.class,true));
  binder.registerCustomEditor(Collection.class,"fixedVersions",new VersionsPropertyEditor(Collection.class,true));
  binder.registerCustomEditor(IssueType.class,new IssueTypePropertyEditor());
  binder.registerCustomEditor(Project.class,new ProjectPropertyEditor());
  binder.registerCustomEditor(Priority.class,new PriorityPropertyEditor());
  binder.registerCustomEditor(Calendar.class,new CalendarPropertyEditor(_DATE_FORMAT));
  binder.setAllowedFields(new String[]{"project","issueType","priority","summary","reporterName","dueDate","components","versions","fixedVersions","assigneeName","environment","description"});
}
