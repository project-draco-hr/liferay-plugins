{
  IMAPFolder imapFolder=null;
  try {
    imapFolder=openFolder(folderId);
    imapFolder.addMessageCountListener(new IMAPMessageCountListener(_user,_account,_password));
    List<Message> jxMessages=getMessages(imapFolder,messageIds,true);
    for (    Message jxMessage : jxMessages) {
      jxMessage.setFlag(Flags.Flag.DELETED,true);
    }
  }
 catch (  MessagingException me) {
    throw new MailException(me);
  }
 finally {
    closeFolder(imapFolder,true);
  }
}
