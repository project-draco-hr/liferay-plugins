{
  String kbArticleURL=KnowledgeBaseUtil.getKBArticleURL(serviceContext.getPlid(),kbArticle.getResourcePrimKey(),kbArticle.getStatus(),serviceContext.getPortalURL(),false);
  return StringUtil.replace(content,new String[]{"[$ARTICLE_CONTENT$]","[$ARTICLE_TITLE$]","[$ARTICLE_URL$]","[$COMMENT_CONTENT$]","[$TO_NAME$]"},new String[]{kbArticle.getContent(),kbArticle.getTitle(),kbArticleURL,kbComment.getContent(),kbComment.getUserName()});
}
