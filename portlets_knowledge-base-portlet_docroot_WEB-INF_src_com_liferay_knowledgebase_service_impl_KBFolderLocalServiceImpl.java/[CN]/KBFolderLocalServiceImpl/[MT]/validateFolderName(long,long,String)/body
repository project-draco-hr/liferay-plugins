{
  if (Validator.isNull(name)) {
    throw new InvalidKBFolderException("A KBFolder cannot have an empty name");
  }
  KBFolder kbFolder=kbFolderPersistence.fetchByG_P_N(groupId,parentKBFolderId,name);
  if (kbFolder != null) {
    throw new DuplicateKBFolderNameException(String.format("A KBFolder with name %s already exists",name));
  }
}
