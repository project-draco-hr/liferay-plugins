{
  if (_service == null) {
    Object obj=PortletBeanLocatorUtil.locate("workflow-portlet",WorkflowComponentServiceUtil.class.getName());
    ClassLoader portletClassLoader=(ClassLoader)PortletBeanLocatorUtil.locate("workflow-portlet","portletClassLoader");
    ClassLoaderProxy classLoaderProxy=new ClassLoaderProxy(obj,portletClassLoader);
    _service=new WorkflowComponentServiceClp(classLoaderProxy);
    ClpSerializer.setClassLoader(portletClassLoader);
  }
  return _service;
}
