{
  try {
    Collection<SolrInputDocument> solrInputDocuments=getSolrInputDocuments(documents);
    if (solrInputDocuments.isEmpty()) {
      return;
    }
    _solrServer.add(solrInputDocuments);
    if (_commit) {
      _solrServer.commit();
    }
  }
 catch (  Exception e) {
    _log.error(e,e);
    throw new SearchException(e.getMessage());
  }
}
