{
  Session session=null;
  try {
    session=openSession();
    JIRAChangeItem jiraChangeItem=(JIRAChangeItem)session.get(JIRAChangeItemImpl.class,new Long(jiraChangeItemId));
    if (jiraChangeItem == null) {
      if (_log.isWarnEnabled()) {
        _log.warn(_NO_SUCH_ENTITY_WITH_PRIMARY_KEY + jiraChangeItemId);
      }
      throw new NoSuchJIRAChangeItemException(_NO_SUCH_ENTITY_WITH_PRIMARY_KEY + jiraChangeItemId);
    }
    return remove(jiraChangeItem);
  }
 catch (  NoSuchJIRAChangeItemException nsee) {
    throw nsee;
  }
catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
  }
}
