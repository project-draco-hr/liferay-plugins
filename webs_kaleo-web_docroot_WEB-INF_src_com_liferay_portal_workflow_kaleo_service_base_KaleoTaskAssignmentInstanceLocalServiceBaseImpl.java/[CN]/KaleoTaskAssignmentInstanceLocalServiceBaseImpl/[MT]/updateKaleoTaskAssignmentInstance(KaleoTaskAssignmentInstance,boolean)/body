{
  kaleoTaskAssignmentInstance.setNew(false);
  kaleoTaskAssignmentInstance=kaleoTaskAssignmentInstancePersistence.update(kaleoTaskAssignmentInstance,merge);
  Indexer indexer=IndexerRegistryUtil.getIndexer(getModelClassName());
  if (indexer != null) {
