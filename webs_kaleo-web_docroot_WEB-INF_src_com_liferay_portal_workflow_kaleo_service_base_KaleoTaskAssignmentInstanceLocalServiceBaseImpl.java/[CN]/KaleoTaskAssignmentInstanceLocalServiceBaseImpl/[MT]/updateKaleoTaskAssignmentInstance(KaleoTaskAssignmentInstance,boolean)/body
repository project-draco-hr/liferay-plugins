      indexer.reindex(kaleoTaskAssignmentInstance);
    }
 catch (    SearchException se) {
      if (_log.isWarnEnabled()) {
        _log.warn(se,se);
      }
    }
  }
  return kaleoTaskAssignmentInstance;
}
