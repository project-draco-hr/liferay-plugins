{
  int count=ArticleLocalServiceUtil.getSiblingArticlesCount(groupId,parentResourcePrimKey,WorkflowConstants.STATUS_ANY);
  int start=0;
  int end=count;
  while ((end - start) > INTERVAL) {
    int mid=(end - start) / 2;
    List<Article> articles=ArticleLocalServiceUtil.getSiblingArticles(groupId,parentResourcePrimKey,WorkflowConstants.STATUS_ANY,mid - 1,mid,new ArticlePriorityComparator(true));
    Article article=articles.get(0);
    if (article.getPriority() < nextPriority) {
      start=mid;
    }
 else {
      end=mid;
    }
  }
  List<Article> articles=ArticleLocalServiceUtil.getSiblingArticles(groupId,parentResourcePrimKey,WorkflowConstants.STATUS_ANY,start,end,new ArticlePriorityComparator(true));
  for (int i=0; i <= articles.size(); i++) {
    Article article=articles.get(i);
    if (article.getResourcePrimKey() != nextResourcePrimKey) {
      continue;
    }
    if (i <= 0) {
      return null;
    }
    return articles.get(i - 1);
  }
  return null;
}
