{
  String dirName="knowledgebase/temp/attachments/" + counterLocalService.increment();
  dlService.addDirectory(companyId,CompanyConstants.SYSTEM,dirName);
  String[] fileNames=dlService.getFileNames(companyId,CompanyConstants.SYSTEM,"knowledgebase/temp/attachments");
  Arrays.sort(fileNames);
  for (int i=0; i < fileNames.length - 50; i++) {
    dlService.deleteDirectory(companyId,CompanyConstants.SYSTEM_STRING,CompanyConstants.SYSTEM,fileNames[i]);
  }
  dlService.deleteDirectory(companyId,CompanyConstants.SYSTEM_STRING,CompanyConstants.SYSTEM,dirName);
}
