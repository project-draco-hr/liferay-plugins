{
  String summary=null;
  if (Validator.isNotNull(article.getDescription())) {
    summary=article.getDescription();
  }
 else {
    summary=StringUtil.shorten(HtmlUtil.extractText(article.getContent()),500);
  }
  assetEntryLocalService.updateEntry(userId,article.getGroupId(),Article.class.getName(),article.getResourcePrimKey(),article.getUuid(),assetCategoryIds,assetTagNames,true,null,null,null,null,ContentTypes.TEXT_HTML,article.getTitle(),null,summary,null,0,0,null,false);
}
