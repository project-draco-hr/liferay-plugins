{
  resourceLocalService.deleteResource(article.getCompanyId(),Article.class.getName(),ResourceConstants.SCOPE_INDIVIDUAL,article.getResourcePrimKey());
  articlePersistence.removeByResourcePrimKey(article.getResourcePrimKey());
  expandoValueLocalService.deleteValues(Article.class.getName(),article.getResourcePrimKey());
  mbMessageLocalService.deleteDiscussionMessages(Article.class.getName(),article.getResourcePrimKey());
  socialActivityLocalService.deleteActivities(Article.class.getName(),article.getResourcePrimKey());
  Indexer indexer=IndexerRegistryUtil.getIndexer(Article.class);
  indexer.delete(article);
  deleteAttachments(article);
  subscriptionLocalService.deleteSubscriptions(article.getCompanyId(),Article.class.getName(),article.getResourcePrimKey());
}
