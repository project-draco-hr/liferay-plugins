{
  Map<String,Object> params=new HashMap<String,Object>();
  params.put("groupId",groupId);
  params.put("parentResourcePrimKey",ArticleConstants.DEFAULT_PARENT_RESOURCE_PRIM_KEY);
  List<Article> articles=getArticles(params,false,QueryUtil.ALL_POS,QueryUtil.ALL_POS,new ArticlePriorityComparator());
  for (  Article article : articles) {
    deleteArticle(article.getResourcePrimKey());
  }
}
