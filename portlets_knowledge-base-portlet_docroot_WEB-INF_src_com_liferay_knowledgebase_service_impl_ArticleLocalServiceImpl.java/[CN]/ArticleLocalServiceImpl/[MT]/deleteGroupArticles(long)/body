{
  List<Article> articles=getSiblingArticles(groupId,ArticleConstants.DEFAULT_PARENT_RESOURCE_PRIM_KEY,WorkflowConstants.STATUS_ANY,QueryUtil.ALL_POS,QueryUtil.ALL_POS,new ArticlePriorityComparator());
  for (  Article article : articles) {
    deleteArticle(article.getResourcePrimKey());
  }
  Group group=groupLocalService.getGroup(groupId);
  List<Subscription> subscriptions=subscriptionLocalService.getSubscriptions(group.getCompanyId(),Article.class.getName(),groupId);
  for (  Subscription subscription : subscriptions) {
    unsubscribeGroupArticles(subscription.getUserId(),groupId);
  }
}
