{
  Article article=articlePersistence.findByResourcePrimKey_First(resourcePrimKey,new ArticleVersionComparator());
  List<Article> articles=getGroupArticles(article.getGroupId(),article.getResourcePrimKey(),QueryUtil.ALL_POS,QueryUtil.ALL_POS,new ArticlePriorityComparator());
  for (  Article curArticle : articles) {
    deleteArticles(curArticle.getResourcePrimKey());
  }
  articlePersistence.removeByResourcePrimKey(article.getResourcePrimKey());
}
