{
  if (template) {
    KBPermission.check(getPermissionChecker(),plid,KnowledgeBaseKeys.MANAGE_TEMPLATES);
  }
 else {
    KBPermission.check(getPermissionChecker(),plid,ActionKeys.ADD_ARTICLE);
  }
  Layout layout=LayoutLocalServiceUtil.getLayout(plid);
  return kbArticleLocalService.addArticle(getUserId(),layout.getGroupId(),title,content,description,minorEdit,template,draft,parentResourcePrimKey,tagsEntries,prefs,themeDisplay);
}
