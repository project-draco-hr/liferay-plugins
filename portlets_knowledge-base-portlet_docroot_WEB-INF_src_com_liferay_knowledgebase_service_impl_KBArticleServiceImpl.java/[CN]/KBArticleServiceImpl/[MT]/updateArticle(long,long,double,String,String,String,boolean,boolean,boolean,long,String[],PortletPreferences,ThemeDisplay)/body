{
  if (template) {
    KBPermission.check(getPermissionChecker(),plid,KnowledgeBaseKeys.MANAGE_TEMPLATES);
  }
 else {
    KBArticlePermission.check(getPermissionChecker(),resourcePrimKey,ActionKeys.UPDATE);
  }
  return kbArticleLocalService.updateArticle(getUserId(),resourcePrimKey,version,title,content,description,draft,minorEdit,template,parentResourcePrimKey,tagsEntries,prefs,themeDisplay);
}
