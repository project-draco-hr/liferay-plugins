{
  String[] array=AdminUtil.escapeSections(sections);
  for (int i=0; i < array.length; i++) {
    array[i]=StringUtil.quote(array[i],StringPool.PERCENT);
  }
  if (status == WorkflowConstants.STATUS_ANY) {
    return kbArticlePersistence.filterCountByG_P_S_L(groupId,KBFolderConstants.DEFAULT_PARENT_FOLDER_ID,array,true);
  }
 else   if (status == WorkflowConstants.STATUS_APPROVED) {
    return kbArticlePersistence.filterCountByG_P_S_M(groupId,KBFolderConstants.DEFAULT_PARENT_FOLDER_ID,array,true);
  }
  return kbArticlePersistence.filterCountByG_P_S_S(groupId,KBFolderConstants.DEFAULT_PARENT_FOLDER_ID,array,status);
}
