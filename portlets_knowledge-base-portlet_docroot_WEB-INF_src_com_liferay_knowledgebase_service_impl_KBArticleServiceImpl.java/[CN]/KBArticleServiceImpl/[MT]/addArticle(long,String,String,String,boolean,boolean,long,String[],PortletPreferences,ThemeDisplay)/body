{
  if (template) {
    KBPermission.check(getPermissionChecker(),groupId,KnowledgeBaseKeys.MANAGE_TEMPLATES);
  }
 else {
    KBPermission.check(getPermissionChecker(),groupId,ActionKeys.ADD_ARTICLE);
  }
  return kbArticleLocalService.addArticle(getUserId(),groupId,title,content,description,minorEdit,template,parentResourcePrimKey,tagsEntries,prefs,themeDisplay);
}
