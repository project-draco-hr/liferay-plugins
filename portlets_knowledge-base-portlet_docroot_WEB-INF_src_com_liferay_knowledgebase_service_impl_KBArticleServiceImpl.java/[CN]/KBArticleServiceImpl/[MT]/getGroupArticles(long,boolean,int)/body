{
  List<KBArticle> articles=new ArrayList<KBArticle>();
  Iterator<KBArticle> itr=kbArticleLocalService.getArticles(groupId,true,template,0,_MAX_END).iterator();
  while (itr.hasNext() && (articles.size() < max)) {
    KBArticle article=itr.next();
    if (KBArticlePermission.contains(getPermissionChecker(),article,ActionKeys.VIEW)) {
      articles.add(article);
    }
  }
  return articles;
}
