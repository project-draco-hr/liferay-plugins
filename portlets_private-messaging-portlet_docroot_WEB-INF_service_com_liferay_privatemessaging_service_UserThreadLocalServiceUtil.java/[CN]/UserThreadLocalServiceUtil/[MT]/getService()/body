{
  if (_service == null) {
    InvokableLocalService invokableLocalService=(InvokableLocalService)PortletBeanLocatorUtil.locate(ClpSerializer.getServletContextName(),UserThreadLocalService.class.getName());
    if (invokableLocalService instanceof UserThreadLocalService) {
      _service=(UserThreadLocalService)invokableLocalService;
    }
 else {
      _service=new UserThreadLocalServiceClp(invokableLocalService);
    }
    ReferenceRegistry.registerReference(UserThreadLocalServiceUtil.class,"_service");
    MethodCache.remove(UserThreadLocalService.class);
  }
  return _service;
}
