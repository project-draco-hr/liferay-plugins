{
  int count=countByARID_C(assigneeRoleId,completed);
  List<WorkflowTask> list=findByARID_C(assigneeRoleId,completed,count - 1,count,obc);
  if (list.isEmpty()) {
    StringBuilder msg=new StringBuilder();
    msg.append("No WorkflowTask exists with the key {");
    msg.append("assigneeRoleId=" + assigneeRoleId);
    msg.append(", ");
    msg.append("completed=" + completed);
    msg.append(StringPool.CLOSE_CURLY_BRACE);
    throw new NoSuchWorkflowTaskException(msg.toString());
  }
 else {
    return list.get(0);
  }
}
