{
  if (message == null) {
    return message;
  }
  if (forceRefresh || message.getBody() == null || "".equals(message.getBody())) {
    Mailbox mailbox=MailboxFactoryUtil.getMailbox(Controller.get().getUser().getUserId(),message.getAccountId(),Controller.get().getPasswordRetriever().getPassword(message.getAccountId()));
    mailbox.synchronizeMessage(message.getMessageId());
    return MessageLocalServiceUtil.getMessage(message.getMessageId());
  }
 else {
    return MessageLocalServiceUtil.getMessage(message.getMessageId());
  }
}
