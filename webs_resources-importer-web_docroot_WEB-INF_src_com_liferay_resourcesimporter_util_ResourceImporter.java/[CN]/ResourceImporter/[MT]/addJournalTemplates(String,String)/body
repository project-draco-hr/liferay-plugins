{
  Set<String> resourcePaths=servletContext.getResourcePaths(resourcesDir.concat(templatesDirName));
  if (resourcePaths == null) {
    return;
  }
  for (  String resourcePath : resourcePaths) {
    URL resourceURL=servletContext.getResource(resourcePath);
    String path=resourceURL.getPath();
    if (path.endsWith(StringPool.SLASH)) {
      continue;
    }
    URLConnection urlConnection=resourceURL.openConnection();
    String name=resourceURL.getFile();
    int pos=name.lastIndexOf(StringPool.SLASH);
    if (pos != -1) {
      name=name.substring(pos + 1);
    }
    doAddJournalTemplates(journalStructureId,name,urlConnection.getInputStream());
  }
}
