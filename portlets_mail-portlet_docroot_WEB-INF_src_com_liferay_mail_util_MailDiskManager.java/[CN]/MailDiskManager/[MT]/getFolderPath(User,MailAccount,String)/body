{
  try {
    String escapedFolderName=StringUtil.replace(URLEncoder.encode(folderName,"UTF-8"),'*',"%2A");
    String pathName=getAccountPath(user,mailAccount) + "/" + escapedFolderName;
    FileUtil.mkdirs(pathName);
    return pathName;
  }
 catch (  UnsupportedEncodingException uee) {
    _log.error(uee,uee);
  }
  return StringPool.BLANK;
}
