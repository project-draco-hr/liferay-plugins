{
  int kbCommentsCount=0;
  if (_kbArticle == null) {
    kbCommentsCount=KBCommentLocalServiceUtil.getKBCommentsCount(_groupId,status);
  }
 else {
    kbCommentsCount=KBCommentLocalServiceUtil.getKBCommentsCount(KBArticle.class.getName(),_kbArticle.getClassPK(),status);
  }
  return kbCommentsCount;
}
