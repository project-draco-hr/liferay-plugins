{
  int kbCommentCount=0;
  if (_kbArticle == null) {
    kbCommentCount=KBCommentLocalServiceUtil.getKBCommentsCount(_groupId,status);
  }
 else {
    kbCommentCount=KBCommentLocalServiceUtil.getKBCommentsCount(KBArticle.class.getName(),_kbArticle.getClassPK(),status);
  }
  return kbCommentCount;
}
