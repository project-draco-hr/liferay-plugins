{
  Message[] jxMessages=messageCountEvent.getMessages();
  javax.mail.Folder imapFolder=null;
  try {
    imapFolder=_imapAccessor.openFolder(jxMessages[0].getFolder());
    Folder folder=FolderLocalServiceUtil.getFolder(_account.getAccountId(),imapFolder.getFullName());
    _imapAccessor.storeEnvelopes(folder.getFolderId(),imapFolder,jxMessages);
  }
 catch (  Exception e) {
    _log.error("Unable to add messages",e);
  }
 finally {
    try {
      _imapAccessor.closeFolder(imapFolder,false);
    }
 catch (    MailException me) {
      _log.error(me,me);
    }
  }
}
