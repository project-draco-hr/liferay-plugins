{
  currentAccountId=accountId;
  boolean drafts=isDraftFolder(accountId,folder);
  removeAllComponents();
  if (drafts) {
    addComponent(openDraft);
  }
 else {
    addComponent(reply);
    addComponent(replyAll);
    addComponent(forward);
    moveToIndex=4;
    addComponent(moveTo);
  }
  addComponent(delete);
  Label spacer=new Label("");
  addComponent(spacer);
  setExpandRatio(spacer,1);
  addComponent(refresh);
}
