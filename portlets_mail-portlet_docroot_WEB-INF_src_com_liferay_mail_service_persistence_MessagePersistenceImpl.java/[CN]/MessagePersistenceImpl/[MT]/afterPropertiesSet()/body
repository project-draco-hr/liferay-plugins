{
  String[] listenerClassNames=StringUtil.split(GetterUtil.getString(com.liferay.util.service.ServiceProps.get("value.object.listener.com.liferay.mail.model.Message")));
  if (listenerClassNames.length > 0) {
    try {
      List<ModelListener<Message>> listenersList=new ArrayList<ModelListener<Message>>();
      for (      String listenerClassName : listenerClassNames) {
        listenersList.add((ModelListener<Message>)Class.forName(listenerClassName).newInstance());
      }
      listeners=listenersList.toArray(new ModelListener[listenersList.size()]);
    }
 catch (    Exception e) {
      _log.error(e);
    }
  }
}
