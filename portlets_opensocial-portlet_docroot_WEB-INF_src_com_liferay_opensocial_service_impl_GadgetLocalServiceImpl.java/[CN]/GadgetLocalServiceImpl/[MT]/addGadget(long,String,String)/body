{
  Date now=new Date();
  validate(name);
  long gadgetId=counterLocalService.increment();
  Gadget gadget=gadgetPersistence.create(gadgetId);
  gadget.setCompanyId(companyId);
  gadget.setCreateDate(now);
  gadget.setModifiedDate(now);
  gadget.setName(name);
  gadget.setUrl(url);
  gadgetPersistence.update(gadget,false);
  Message message=new Message();
  message.put("command","add");
  message.put("companyId",companyId);
  message.put("name",name);
  message.put("url",url);
  message.put("gadgetId",gadgetId);
  MessageBusUtil.sendMessage(DestinationNames.OPENSOCIAL,message);
  return gadget;
}
