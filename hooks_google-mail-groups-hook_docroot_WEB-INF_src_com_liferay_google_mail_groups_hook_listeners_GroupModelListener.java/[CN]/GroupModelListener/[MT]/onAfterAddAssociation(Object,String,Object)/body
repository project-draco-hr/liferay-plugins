{
  try {
    final Group group=GroupLocalServiceUtil.getGroup((Long)classPK);
    final List<User> users=getUsers(classPK,associationClassName,associationClassPK);
    Callable<Void> callable=new Callable<Void>(){
      @Override public Void call() throws Exception {
        MessageBusUtil.sendMessage(DestinationNames.ASYNC_SERVICE,new OnAssociationProcessCallable(group,users,"addGroupMembers"));
        return null;
      }
    }
;
    TransactionCommitCallbackUtil.registerCallback(callable);
  }
 catch (  Exception e) {
    _log.error(e,e);
  }
}
