{
  Connection con=null;
  PreparedStatement ps=null;
  ResultSet rs=null;
  try {
    con=DataAccess.getConnection();
    ps=con.prepareStatement("select plid, typeSettings from Layout where typeSettings " + "like ?");
    String oldPortletIdParam=StringPool.PERCENT.concat(oldPortletId).concat(StringPool.PERCENT);
    ps.setString(1,oldPortletIdParam);
    rs=ps.executeQuery();
    while (rs.next()) {
      long plid=rs.getLong("plid");
      String typeSettings=rs.getString("typeSettings");
      typeSettings=StringUtil.replace(typeSettings,oldPortletId,newPortletId);
      updateTypeSettings(plid,typeSettings);
    }
  }
  finally {
    DataAccess.cleanUp(con,ps,rs);
  }
}
