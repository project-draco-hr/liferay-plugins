{
  super(portletRequest,new KBStructureDisplayTerms(portletRequest),new KBStructureSearchTerms(portletRequest),DEFAULT_CUR_PARAM,DEFAULT_DELTA,iteratorURL,null,EMPTY_RESULTS_MESSAGE);
  KBStructureDisplayTerms displayTerms=(KBStructureDisplayTerms)getDisplayTerms();
  iteratorURL.setParameter(KBStructureDisplayTerms.ANYTIME,String.valueOf(displayTerms.isAnytime()));
  iteratorURL.setParameter(KBStructureDisplayTerms.CONTENT,displayTerms.getContent());
  iteratorURL.setParameter(KBStructureDisplayTerms.END_DATE_DAY,String.valueOf(displayTerms.getEndDateDay()));
  iteratorURL.setParameter(KBStructureDisplayTerms.END_DATE_MONTH,String.valueOf(displayTerms.getEndDateMonth()));
  iteratorURL.setParameter(KBStructureDisplayTerms.END_DATE_YEAR,String.valueOf(displayTerms.getEndDateYear()));
  iteratorURL.setParameter(KBStructureDisplayTerms.START_DATE_DAY,String.valueOf(displayTerms.getStartDateDay()));
  iteratorURL.setParameter(KBStructureDisplayTerms.START_DATE_MONTH,String.valueOf(displayTerms.getStartDateMonth()));
  iteratorURL.setParameter(KBStructureDisplayTerms.START_DATE_YEAR,String.valueOf(displayTerms.getStartDateYear()));
  iteratorURL.setParameter(KBStructureDisplayTerms.TITLE,displayTerms.getTitle());
  try {
    PortalPreferences preferences=PortletPreferencesFactoryUtil.getPortalPreferences(portletRequest);
    String oldOrderByCol=preferences.getValue(PortletKeys.KNOWLEDGE_BASE_ADMIN,"kb-structures-order-by-col","modified-date");
    String oldOrderByType=preferences.getValue(PortletKeys.KNOWLEDGE_BASE_ADMIN,"kb-structures-order-by-type","desc");
    String orderByCol=ParamUtil.getString(portletRequest,"orderByCol",oldOrderByCol);
    String orderByType=ParamUtil.getString(portletRequest,"orderByType",oldOrderByType);
    if (!Validator.equals(orderByCol,oldOrderByCol) || !Validator.equals(orderByType,oldOrderByType)) {
      preferences.setValue(PortletKeys.KNOWLEDGE_BASE_ADMIN,"kb-structures-order-by-col",orderByCol);
      preferences.setValue(PortletKeys.KNOWLEDGE_BASE_ADMIN,"kb-structures-order-by-type",orderByType);
      KBStructureSearchTerms searchTerms=(KBStructureSearchTerms)getSearchTerms();
      searchTerms.setCurStartValues(new int[0]);
    }
    OrderByComparator orderByComparator=KnowledgeBaseUtil.getKBStructureOrderByComparator(orderByCol,orderByType);
    setOrderByCol(orderByCol);
    setOrderByType(orderByType);
    setOrderByComparator(orderByComparator);
  }
 catch (  Exception e) {
    _log.error(e);
  }
}
