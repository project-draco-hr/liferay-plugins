{
  String selectionMethod=jxPreferences.getValue("selection-method","parent-group");
  long[] resourcePrimKeys=GetterUtil.getLongValues(jxPreferences.getValues("resource-prim-keys",null));
  boolean hasArticle=ArrayUtil.contains(resourcePrimKeys,article.getResourcePrimKey());
  if ((selectionMethod.equals("parent-group")) || (selectionMethod.equals("articles") && hasArticle)) {
    return true;
  }
  if (selectionMethod.equals("articles")) {
    return true;
  }
  return false;
}
