{
  Oauth2.Builder builder=new Oauth2.Builder(new NetHttpTransport(),new JacksonFactory(),credentials);
  Oauth2 oauth2=builder.build();
  Userinfo userinfo=null;
  try {
    com.google.api.services.oauth2.Oauth2.Userinfo oAuth2Userinfo=oauth2.userinfo();
    com.google.api.services.oauth2.Oauth2.Userinfo.Get oAuth2UserinfoGet=oAuth2Userinfo.get();
    userinfo=oAuth2UserinfoGet.execute();
  }
 catch (  IOException ioe) {
    _log.error(ioe,ioe);
    throw new SystemException();
  }
  if ((userinfo == null) || (userinfo.getId() == null)) {
    throw new SystemException();
  }
  return userinfo;
}
