{
  InputStream is=getPortletContext().getResourceAsStream(path);
  if (is == null) {
    _log.error(path + " is not a valid groovy file");
    return;
  }
  try {
    declareBeans(is,req,res);
  }
 catch (  BSFException bsfe) {
    String message="The script at " + path + " or one of the global files has "+ "errors: ";
    Throwable te=bsfe.getTargetException();
    _log.error(message,te);
  }
 finally {
    is.close();
  }
}
