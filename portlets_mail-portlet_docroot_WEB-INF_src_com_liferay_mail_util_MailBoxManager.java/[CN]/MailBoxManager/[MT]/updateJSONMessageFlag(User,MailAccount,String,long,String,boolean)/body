{
  JSONObject jsonMessage=MailDiskManager.getJSONMessageByUid(_user,_mailAccount.getEmailAddress(),folderName,messageUid);
  JSONObject jsonFlags=jsonMessage.getJSONObject("flags");
  jsonFlags.put(flag,value);
  String filePath=MailDiskManager.getMessageFilePath(_user,_mailAccount.getEmailAddress(),folderName,messageUid);
  try {
    FileUtil.write(filePath,jsonMessage.toString());
  }
 catch (  IOException ioe) {
    _log.error(ioe,ioe);
  }
}
