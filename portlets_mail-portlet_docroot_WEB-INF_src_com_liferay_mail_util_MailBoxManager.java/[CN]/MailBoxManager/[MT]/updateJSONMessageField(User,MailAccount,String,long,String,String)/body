{
  JSONObject jsonObj=MailDiskManager.getJSONMessageByUid(_user,_mailAccount.getEmailAddress(),folderName,messageUid);
  JSONUtil.put(jsonObj,field,value);
  String filePath=MailDiskManager.getMessageFilePath(_user,_mailAccount.getEmailAddress(),folderName,messageUid);
  FileUtil.write(filePath,jsonObj.toString());
}
