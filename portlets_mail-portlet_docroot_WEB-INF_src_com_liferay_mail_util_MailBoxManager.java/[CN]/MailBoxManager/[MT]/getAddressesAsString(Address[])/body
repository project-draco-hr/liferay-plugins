{
  StringBuffer sb=new StringBuffer();
  if (addresses == null) {
    return StringPool.BLANK;
  }
  try {
    for (int i=0; i < addresses.length; i++) {
      if (i != 0) {
        sb.append(",");
      }
      sb.append(((InternetAddress)addresses[i]).getAddress());
    }
  }
 catch (  Exception e) {
    e.printStackTrace();
    return null;
  }
  return sb.toString();
}
