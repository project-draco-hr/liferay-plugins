{
  JSONObject jsonObj=MailDiskManager.getJSONMessageByUid(_user,_mailAccount,folderName,String.valueOf(messageUid));
  JSONUtil.put(jsonObj,field,value);
  String filePath=MailDiskManager.getMessageFilePath(_user,_mailAccount,folderName,messageUid);
  FileUtil.write(filePath,jsonObj.toString());
}
