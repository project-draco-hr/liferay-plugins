{
  StringBuilder sb=new StringBuilder();
  if (addresses == null) {
    return StringPool.BLANK;
  }
  try {
    for (int i=0; i < addresses.length; i++) {
      InternetAddress address=(InternetAddress)addresses[i];
      if (i != 0) {
        sb.append(StringPool.COMMA);
      }
      sb.append(address.getAddress());
    }
  }
 catch (  Exception e) {
    _log.error(e,e);
    return null;
  }
  return sb.toString();
}
