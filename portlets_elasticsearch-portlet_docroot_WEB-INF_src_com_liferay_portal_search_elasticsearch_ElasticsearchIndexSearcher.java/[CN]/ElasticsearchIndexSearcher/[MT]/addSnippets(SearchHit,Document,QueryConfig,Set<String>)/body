{
  if (!queryConfig.isHighlightEnabled()) {
    return;
  }
  Map<String,HighlightField> highlightFields=hit.getHighlightFields();
  if ((highlightFields == null) || highlightFields.isEmpty()) {
    return;
  }
  addSnippets(document,queryTerms,highlightFields,Field.CONTENT,queryConfig.getLocale());
  addSnippets(document,queryTerms,highlightFields,Field.DESCRIPTION,queryConfig.getLocale());
  addSnippets(document,queryTerms,highlightFields,Field.TITLE,queryConfig.getLocale());
}
