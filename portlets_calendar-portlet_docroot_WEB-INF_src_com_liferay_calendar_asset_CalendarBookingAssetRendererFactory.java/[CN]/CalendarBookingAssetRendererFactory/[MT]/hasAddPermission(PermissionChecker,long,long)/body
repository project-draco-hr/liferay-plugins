{
  ServiceContext serviceContext=new ServiceContext();
  serviceContext.setCompanyId(permissionChecker.getCompanyId());
  CalendarResource calendarResource=CalendarResourceUtil.getScopedGroupCalendarResource(groupId,serviceContext);
  if (calendarResource == null) {
    return false;
  }
  Calendar calendar=calendarResource.getDefaultCalendar();
  return CalendarPermission.contains(permissionChecker,calendar.getCalendarId(),ActionKeys.MANAGE_BOOKINGS);
}
