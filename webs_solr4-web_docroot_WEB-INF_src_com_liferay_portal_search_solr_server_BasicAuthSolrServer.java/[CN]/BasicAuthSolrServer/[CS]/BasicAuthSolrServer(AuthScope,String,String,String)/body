{
  _username=username;
  _password=password;
  _poolingClientConnectionManager=new PoolingClientConnectionManager();
  DefaultHttpClient httpClient=new DefaultHttpClient(_poolingClientConnectionManager);
  if ((_username != null) && (_password != null)) {
    if (authScope == null) {
      authScope=AuthScope.ANY;
    }
    CredentialsProvider credentialsProvider=httpClient.getCredentialsProvider();
    credentialsProvider.setCredentials(authScope,new UsernamePasswordCredentials(_username,_password));
  }
  _server=new HttpSolrServer(url,httpClient);
}
