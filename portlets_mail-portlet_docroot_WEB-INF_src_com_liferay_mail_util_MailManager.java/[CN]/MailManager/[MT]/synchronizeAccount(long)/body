{
  String key=AccountLock.getKey(_user.getUserId(),accountId);
  if (AccountLock.acquireLock(key)) {
    if (_log.isDebugEnabled()) {
      _log.debug("Synchronizing account " + accountId);
    }
    Mailbox mailbox=MailboxFactoryUtil.getMailbox(_user.getUserId(),accountId);
    mailbox.synchronize();
    AccountLock.releaseLock(key);
  }
 else {
    if (_log.isDebugEnabled()) {
      _log.debug("Unable to acquire a synchronization lock for account " + accountId);
    }
  }
}
