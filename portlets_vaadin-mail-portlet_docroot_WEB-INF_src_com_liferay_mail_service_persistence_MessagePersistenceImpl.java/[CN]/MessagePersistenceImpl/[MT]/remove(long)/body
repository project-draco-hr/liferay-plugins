{
  Session session=null;
  try {
    session=openSession();
    Message message=(Message)session.get(MessageImpl.class,Long.valueOf(messageId));
    if (message == null) {
      if (_log.isWarnEnabled()) {
        _log.warn(_NO_SUCH_ENTITY_WITH_PRIMARY_KEY + messageId);
      }
      throw new NoSuchMessageException(_NO_SUCH_ENTITY_WITH_PRIMARY_KEY + messageId);
    }
    return messagePersistence.remove(message);
  }
 catch (  NoSuchMessageException nsee) {
    throw nsee;
  }
catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
  }
}
