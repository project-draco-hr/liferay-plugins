{
  String newMessageBody="<p>&nbsp;</p><br /><br />";
  newMessageBody+=Lang.get("on-x-x-wrote",formatDate(originalMessage.getSentDate(),Controller.get().getUserLocale()),originalMessage.getSender());
  newMessageBody+="<br /><br />";
  newMessageBody+=originalMessage.getBody();
  return newMessageBody;
}
