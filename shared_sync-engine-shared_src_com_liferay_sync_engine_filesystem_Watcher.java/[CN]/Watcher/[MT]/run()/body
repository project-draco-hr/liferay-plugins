{
  while (true) {
    WatchKey watchKey=null;
    try {
      watchKey=_watchService.take();
    }
 catch (    InterruptedException ie) {
      return;
    }
    Path parentFilePath=_filePaths.get(watchKey);
    if (parentFilePath == null) {
      continue;
    }
    List<WatchEvent<?>> watchEvents=watchKey.pollEvents();
    for (int i=0; i < watchEvents.size(); i++) {
      WatchEvent<Path> watchEvent=(WatchEvent<Path>)watchEvents.get(i);
      Path childFilePath=parentFilePath.resolve(watchEvent.context()).normalize();
      fireWatchEventListener(watchEvent,childFilePath);
      WatchEvent.Kind<?> kind=watchEvent.kind();
      if (_recursive && (kind == StandardWatchEventKinds.ENTRY_CREATE)) {
        try {
          if (Files.isDirectory(childFilePath,LinkOption.NOFOLLOW_LINKS)) {
            register(childFilePath,true);
          }
        }
 catch (        IOException ioe) {
        }
      }
    }
    if (!watchKey.reset()) {
      _filePaths.remove(watchKey);
      if (_filePaths.isEmpty()) {
        break;
      }
    }
  }
}
