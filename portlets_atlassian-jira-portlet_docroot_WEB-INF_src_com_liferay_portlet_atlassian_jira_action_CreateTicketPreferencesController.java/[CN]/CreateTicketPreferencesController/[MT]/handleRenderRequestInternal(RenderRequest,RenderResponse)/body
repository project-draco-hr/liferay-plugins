{
  ModelAndView modelView=new ModelAndView(JiraPortletConstants.PREFS_VIEW);
  PortletPreferences prefs=req.getPreferences();
  final String url=prefs.getValue(JiraPortletConstants.URL_PREFERENCE,"");
  final String userName=prefs.getValue(JiraPortletConstants.USER_NAME_PREFERENCE,"");
  final String password=prefs.getValue(JiraPortletConstants.PASSWORD_PREFERENCE,"");
  modelView.addObject(JiraPortletConstants.URL_PREFERENCE,url);
  modelView.addObject(JiraPortletConstants.USER_NAME_PREFERENCE,userName);
  modelView.addObject(JiraPortletConstants.PASSWORD_PREFERENCE,password);
  return modelView;
}
