{
  List<UserGroupGroupRole> userGroupGroupRoles=new ArrayList<UserGroupGroupRole>();
  List<UserGroup> userGroups=UserGroupLocalServiceUtil.getUserUserGroups(userId);
  for (  UserGroup userGroup : userGroups) {
    List<UserGroupGroupRole> usreGroupGroupRoles=UserGroupGroupRoleLocalServiceUtil.getUserGroupGroupRoles(userGroup.getUserGroupId());
    userGroupGroupRoles.addAll(usreGroupGroupRoles);
  }
  return userGroupGroupRoles;
}
