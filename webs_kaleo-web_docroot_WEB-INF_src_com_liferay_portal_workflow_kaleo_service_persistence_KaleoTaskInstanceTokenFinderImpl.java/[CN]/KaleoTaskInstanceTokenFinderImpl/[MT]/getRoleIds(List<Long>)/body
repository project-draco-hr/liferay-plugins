{
  if (roleIds.isEmpty()) {
    return StringPool.BLANK;
  }
  StringBundler sb=new StringBundler(roleIds.size() * 2 + 1);
  sb.append("(");
  for (int i=0; i < roleIds.size(); i++) {
    sb.append("(Kaleo_KaleoTaskAssignmentInstance.assigneeClassPK = ?)");
    if ((i + 1) < roleIds.size()) {
      sb.append(" OR ");
    }
 else {
      sb.append(")");
    }
  }
  return sb.toString();
}
