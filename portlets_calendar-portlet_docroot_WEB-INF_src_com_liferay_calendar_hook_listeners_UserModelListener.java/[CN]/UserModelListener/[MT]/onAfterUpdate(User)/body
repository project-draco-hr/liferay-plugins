{
  try {
    long classNameId=PortalUtil.getClassNameId(User.class);
    CalendarResource calendarResource=CalendarResourceLocalServiceUtil.fetchCalendarResource(classNameId,user.getUserId());
    if (calendarResource == null) {
      return;
    }
    Locale defaultLocale=LocaleUtil.getDefault();
    calendarResource.setName(user.getFullName(),defaultLocale);
    CalendarResourceLocalServiceUtil.updateCalendarResource(calendarResource);
  }
 catch (  Exception e) {
    throw new ModelListenerException(e);
  }
}
