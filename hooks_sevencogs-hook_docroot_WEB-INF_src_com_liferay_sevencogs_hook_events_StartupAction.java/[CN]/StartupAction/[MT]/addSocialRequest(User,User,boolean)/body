{
  SocialRequest socialRequest=SocialRequestLocalServiceUtil.addRequest(user.getUserId(),0,User.class.getName(),user.getUserId(),_WOL_FRIENDS_REQUEST_KEYS_ADD_FRIEND,StringPool.BLANK,receiverUser.getUserId());
  if (confirm) {
    SocialRequestLocalServiceUtil.updateRequest(socialRequest.getRequestId(),SocialRequestConstants.STATUS_CONFIRM,new ThemeDisplay());
  }
}
