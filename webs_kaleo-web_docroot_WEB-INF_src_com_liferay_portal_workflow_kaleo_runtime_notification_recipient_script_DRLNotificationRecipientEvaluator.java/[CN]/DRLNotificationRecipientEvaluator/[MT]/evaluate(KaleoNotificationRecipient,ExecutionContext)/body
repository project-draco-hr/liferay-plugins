{
  String[] recipientScriptRequiredContexts=StringUtil.split(kaleoNotificationRecipient.getRecipientScriptRequiredContexts());
  ClassLoader[] classLoaders=ClassLoaderUtil.getClassLoaders(recipientScriptRequiredContexts);
  List<Fact<?>> facts=RulesContextBuilder.buildRulesContext(executionContext);
  RulesResourceRetriever rulesResourceRetriever=new RulesResourceRetriever(new StringResourceRetriever(kaleoNotificationRecipient.getRecipientScript()));
  Query query=Query.createStandardQuery();
  return RulesEngineUtil.execute(rulesResourceRetriever,facts,query,classLoaders);
}
