{
  ServiceContext serviceContext=new ServiceContext();
  serviceContext.setCompanyId(companyId);
  serviceContext.setScopeGroupId(groupId);
  serviceContext.setUserId(userId);
  WorkflowInstanceAdapter workflowInstance=(WorkflowInstanceAdapter)_workflowEngine.startWorkflowInstance(workflowDefinitionName,workflowDefinitionVersion,transitionName,workflowContext,serviceContext);
  KaleoInstanceToken kaleoInstanceToken=workflowInstance.getKaleoInstanceToken();
  ExecutionContext executionContext=new ExecutionContext(kaleoInstanceToken,workflowContext,serviceContext);
  try {
    _kaleoSignaler.signalEntry(transitionName,executionContext);
  }
 catch (  Exception e) {
    throw new WorkflowException("Unable to start workflow",e);
  }
  return workflowInstance;
}
