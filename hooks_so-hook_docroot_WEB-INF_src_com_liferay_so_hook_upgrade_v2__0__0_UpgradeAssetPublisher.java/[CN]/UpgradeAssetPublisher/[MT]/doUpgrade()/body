{
  List<Group> groups=GroupLocalServiceUtil.getGroups(QueryUtil.ALL_POS,QueryUtil.ALL_POS);
  for (  Group group : groups) {
    if (!group.isCommunity() || group.getName().equals(GroupConstants.CONTROL_PANEL) || group.getName().equals(GroupConstants.GUEST)) {
      continue;
    }
    Layout layout=LayoutLocalServiceUtil.getLayout(group.getGroupId(),group.hasPrivateLayouts(),3);
    configureAssetPublisher(layout);
    layout=LayoutLocalServiceUtil.getLayout(group.getGroupId(),group.hasPrivateLayouts(),4);
    configureAssetPublisher(layout);
    layout=LayoutLocalServiceUtil.getLayout(group.getGroupId(),group.hasPrivateLayouts(),5);
    configureAssetPublisher(layout);
    layout=LayoutLocalServiceUtil.getLayout(group.getGroupId(),group.hasPrivateLayouts(),6);
    configureAssetPublisher(layout);
  }
}
