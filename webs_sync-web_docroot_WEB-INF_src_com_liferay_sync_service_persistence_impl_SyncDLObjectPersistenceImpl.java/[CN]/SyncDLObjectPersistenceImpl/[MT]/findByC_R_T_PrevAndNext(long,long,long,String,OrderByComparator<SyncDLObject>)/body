{
  SyncDLObject syncDLObject=findByPrimaryKey(syncDLObjectId);
  Session session=null;
  try {
    session=openSession();
    SyncDLObject[] array=new SyncDLObjectImpl[3];
    array[0]=getByC_R_T_PrevAndNext(session,syncDLObject,companyId,repositoryId,type,orderByComparator,true);
