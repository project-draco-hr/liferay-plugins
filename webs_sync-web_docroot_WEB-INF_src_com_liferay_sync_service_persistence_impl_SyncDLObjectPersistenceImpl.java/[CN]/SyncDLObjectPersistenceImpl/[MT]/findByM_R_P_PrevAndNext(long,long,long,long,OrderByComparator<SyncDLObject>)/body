{
  SyncDLObject syncDLObject=findByPrimaryKey(syncDLObjectId);
  Session session=null;
  try {
    session=openSession();
    SyncDLObject[] array=new SyncDLObjectImpl[3];
    array[0]=getByM_R_P_PrevAndNext(session,syncDLObject,modifiedTime,repositoryId,parentFolderId,orderByComparator,true);
    array[1]=syncDLObject;
    array[2]=getByM_R_P_PrevAndNext(session,syncDLObject,modifiedTime,repositoryId,parentFolderId,orderByComparator,false);
    return array;
  }
 catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
  }
}
