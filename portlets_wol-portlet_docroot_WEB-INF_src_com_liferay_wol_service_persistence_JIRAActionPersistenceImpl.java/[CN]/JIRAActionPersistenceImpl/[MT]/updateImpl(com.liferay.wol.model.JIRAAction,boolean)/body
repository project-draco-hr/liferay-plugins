{
  Session session=null;
  try {
    session=openSession();
    if (merge) {
      session.merge(jiraAction);
    }
 else {
      if (jiraAction.isNew()) {
        session.save(jiraAction);
      }
    }
    session.flush();
    jiraAction.setNew(false);
    return jiraAction;
  }
 catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
    FinderCacheUtil.clearCache(JIRAAction.class.getName());
  }
}
