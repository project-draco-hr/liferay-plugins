{
  DynamicQuery dynamicQuery=DynamicQueryFactoryUtil.forClass(WorkflowTask.class);
  if (onlyOpenTasks) {
    dynamicQuery.add(RestrictionsFactoryUtil.eq("completed",false));
  }
  if (queryContext != null) {
    if (queryContext.isPaging()) {
      dynamicQuery.setLimit(queryContext.getBeginRowIndex(),queryContext.getEndRowIndex());
    }
    if (queryContext.hasOrder()) {
      List<Order> orders=WorkflowEntityBridgeUtil.createOrders(WorkflowTask.class,queryContext.getOrderComparator());
      for (      Order order : orders) {
        dynamicQuery.addOrder(order);
      }
    }
  }
  try {
    List workflowTasks=WorkflowTaskUtil.findWithDynamicQuery(dynamicQuery);
    return (List<WorkflowTaskBridge>)WorkflowEntityBridgeUtil.wrapWorkflowTasks(workflowTasks);
  }
 catch (  Exception e) {
    throw new ProcessException(e.getMessage(),e);
  }
}
