{
  MicroblogsEntry microblogsEntry=MicroblogsEntryLocalServiceUtil.getMicroblogsEntry(activity.getClassPK());
  if (microblogsEntry.getType() == MicroblogsEntryConstants.TYPE_REPLY) {
    MicroblogsEntry receiverMicroblogsEntry=MicroblogsEntryLocalServiceUtil.fetchMicroblogsEntry(microblogsEntry.getReceiverMicroblogsEntryId());
    if ((receiverMicroblogsEntry == null) || !MicroblogsEntryPermission.contains(permissionChecker,receiverMicroblogsEntry,ActionKeys.VIEW)) {
      return false;
    }
  }
  return MicroblogsEntryPermission.contains(permissionChecker,microblogsEntry,ActionKeys.VIEW);
}
