{
  List<KaleoDefinition> list=findByC_N_A(companyId,name,active,0,1,orderByComparator);
  if (list.isEmpty()) {
    StringBundler msg=new StringBundler(8);
    msg.append(_NO_SUCH_ENTITY_WITH_KEY);
    msg.append("companyId=");
    msg.append(companyId);
    msg.append(", name=");
    msg.append(name);
    msg.append(", active=");
    msg.append(active);
    msg.append(StringPool.CLOSE_CURLY_BRACE);
    throw new NoSuchDefinitionException(msg.toString());
  }
 else {
    return list.get(0);
  }
}
