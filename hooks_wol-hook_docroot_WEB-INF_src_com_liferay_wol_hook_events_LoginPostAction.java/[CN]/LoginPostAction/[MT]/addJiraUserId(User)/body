{
  Connection con=null;
  PreparedStatement ps=null;
  ResultSet rs=null;
  try {
    DataSource dataSource=(DataSource)PortletBeanLocatorUtil.locate("wol-portlet","jiraDataSource");
    if (dataSource == null) {
      _log.error("JIRA data source is null");
      return;
    }
    con=dataSource.getConnection();
    ps=con.prepareStatement(_GET_JIRA_USER_ID);
    ps.setString(1,user.getEmailAddress());
    rs=ps.executeQuery();
    while (rs.next()) {
      String jiraUserId=rs.getString(1);
      ExpandoValueLocalServiceUtil.addValue(User.class.getName(),"WOL","jiraUserId",user.getUserId(),jiraUserId);
    }
  }
  finally {
    DataAccess.cleanUp(con,ps,rs);
  }
}
