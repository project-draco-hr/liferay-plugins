{
  User user=UserLocalServiceUtil.getUser(getUserId());
  java.util.Calendar userJCalendar=CalendarFactoryUtil.getCalendar(user.getTimeZone());
  userJCalendar.setTime(date);
  java.util.Calendar utcUserJCalendar=JCalendarUtil.getJCalendar(userJCalendar,TimeZoneUtil.getTimeZone(StringPool.UTC));
  return utcUserJCalendar.getTime();
}
