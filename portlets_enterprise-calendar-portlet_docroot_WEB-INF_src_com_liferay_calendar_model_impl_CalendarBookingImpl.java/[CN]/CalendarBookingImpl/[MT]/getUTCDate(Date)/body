{
  User user=UserLocalServiceUtil.getUser(getUserId());
  java.util.Calendar userDate=CalendarFactoryUtil.getCalendar(user.getTimeZone());
  userDate.setTime(date);
  java.util.Calendar utcDate=CalendarUtil.getCalendar(userDate,TimeZoneUtil.getTimeZone(StringPool.UTC));
  return utcDate.getTime();
}
