{
  KaleoAction kaleoAction=findByPrimaryKey(kaleoActionId);
  Session session=null;
  try {
    session=openSession();
    KaleoAction[] array=new KaleoActionImpl[3];
    array[0]=getByKNI_ET_PrevAndNext(session,kaleoAction,kaleoNodeId,executionType,orderByComparator,true);
    array[1]=kaleoAction;
    array[2]=getByKNI_ET_PrevAndNext(session,kaleoAction,kaleoNodeId,executionType,orderByComparator,false);
    return array;
  }
 catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
  }
}
