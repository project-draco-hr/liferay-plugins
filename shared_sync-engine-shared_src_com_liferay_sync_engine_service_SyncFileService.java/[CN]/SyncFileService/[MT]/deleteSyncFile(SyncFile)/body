{
  try {
    _syncFilePersistence.delete(syncFile);
    if (!syncFile.isFolder()) {
      return;
    }
    List<SyncFile> childSyncFiles=_syncFilePersistence.queryForEq("parentFolderId",syncFile.getSyncFileId());
    for (    SyncFile childSyncFile : childSyncFiles) {
      if (childSyncFile.isFolder()) {
        deleteSyncFile(childSyncFile);
      }
 else {
        _syncFilePersistence.deleteById(childSyncFile.getSyncFileId());
      }
    }
  }
 catch (  SQLException sqle) {
    if (_logger.isDebugEnabled()) {
      _logger.debug(sqle.getMessage(),sqle);
    }
  }
}
