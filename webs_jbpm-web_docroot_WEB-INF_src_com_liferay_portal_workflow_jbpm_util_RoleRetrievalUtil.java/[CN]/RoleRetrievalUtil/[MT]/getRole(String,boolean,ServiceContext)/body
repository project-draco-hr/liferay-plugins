{
  Role role=null;
  try {
    role=RoleLocalServiceUtil.getRole(serviceContext.getCompanyId(),name);
  }
 catch (  NoSuchRoleException nsre) {
    if (!autoCreate) {
      throw nsre;
    }
    User defaultUser=UserLocalServiceUtil.getDefaultUser(serviceContext.getCompanyId());
    role=RoleLocalServiceUtil.addRole(defaultUser.getUserId(),serviceContext.getCompanyId(),name,null,"Autogenerated role from workflow definition",RoleConstants.TYPE_REGULAR);
  }
  return role;
}
