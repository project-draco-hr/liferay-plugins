{
  PermissionChecker permissionChecker=themeDisplay.getPermissionChecker();
  Template template=TemplateLocalServiceUtil.getTemplate(activity.getClassPK());
  if (!TemplatePermission.contains(permissionChecker,template,ActionKeys.VIEW)) {
    return null;
  }
  String link=getTemplateURL(template.getGroupId(),template.getTemplateId(),themeDisplay);
  String key=StringPool.BLANK;
  if (activity.getType() == AdminActivityKeys.ADD_TEMPLATE) {
    key="activity-knowledge-base-admin-add-template";
  }
 else   if (activity.getType() == AdminActivityKeys.UPDATE_TEMPLATE) {
    key="activity-knowledge-base-admin-update-template";
  }
  String title=getTitle(activity,key,template.getTitle(),link,themeDisplay);
  String body=StringPool.BLANK;
  return new SocialActivityFeedEntry(link,title,body);
}
