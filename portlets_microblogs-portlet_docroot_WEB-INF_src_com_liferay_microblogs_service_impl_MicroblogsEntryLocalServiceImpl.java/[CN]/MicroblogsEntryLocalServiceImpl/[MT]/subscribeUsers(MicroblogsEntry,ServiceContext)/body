{
  long microblogsSubscriptionEntryId=microblogsEntry.getReceiverMicroblogsEntryId();
  SubscriptionLocalServiceUtil.addSubscription(microblogsEntry.getUserId(),serviceContext.getScopeGroupId(),MicroblogsEntry.class.getName(),microblogsSubscriptionEntryId);
  List<String> screenNames=MicroblogsUtil.getTaggedUsersScreenNames(microblogsEntry.getContent());
  for (  String screenName : screenNames) {
    long userId=UserLocalServiceUtil.getUserIdByScreenName(serviceContext.getCompanyId(),screenName);
    SubscriptionLocalServiceUtil.addSubscription(userId,serviceContext.getScopeGroupId(),MicroblogsEntry.class.getName(),microblogsSubscriptionEntryId);
  }
}
