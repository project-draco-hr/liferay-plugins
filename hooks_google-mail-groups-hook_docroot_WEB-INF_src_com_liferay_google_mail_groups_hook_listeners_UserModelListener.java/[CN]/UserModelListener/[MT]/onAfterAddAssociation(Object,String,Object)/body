{
  try {
    new OnAssociation(classPK,associationClassName,associationClassPK){
      @Override public void onAssociation(      User user,      Group group,      GGroupManager gGroupManager) throws Exception {
        gGroupManager.addGGroupMember(GoogleMailGroupsUtil.getGroupEmailAddress(group),GoogleMailGroupsUtil.getUserEmailAddress(user));
      }
    }
;
  }
 catch (  Exception e) {
    throw new ModelListenerException(e);
  }
}
