{
  Group group=GroupLocalServiceUtil.getGroup(groupId);
  PortletPreferences groupPortletPreferences=PortletPreferencesLocalServiceUtil.getPreferences(group.getCompanyId(),groupId,ownerType,0,key);
  Settings defaultCompanySettings=getCompanySettings(group.getCompanyId(),key,PortletKeys.PREFS_OWNER_TYPE_GROUP_DEFAULTS_COMPANY);
  return new PortletPreferencesSettings(groupPortletPreferences,defaultCompanySettings);
}
