{
  boolean strict=PortletPreferencesThreadLocal.isStrict();
  try {
    PortletPreferencesThreadLocal.setStrict(false);
    _localizeRoleNames(companyId);
    _localizeUsers(companyId);
  }
 catch (  Exception e) {
    _log.error(e,e);
  }
 finally {
    PortletPreferencesThreadLocal.setStrict(strict);
  }
}
